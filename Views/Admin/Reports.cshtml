@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Admin Reports</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container { max-width: 1600px; margin: 0 auto; padding: 30px; }
        .header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { color: #667eea; font-size: 28px; }
        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #5a6268; }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            text-align: center;
            transition: transform 0.3s;
        }
        .stat-card:hover { transform: translateY(-5px); }
        .stat-card i {
            font-size: 40px;
            margin-bottom: 15px;
        }
        .stat-card h3 { font-size: 36px; margin-bottom: 10px; }
        .stat-card p { color: #666; font-size: 14px; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }
        .chart-container {
            position: relative;
            height: 300px;
            margin-top: 20px;
        }
        .report-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 30px;
            margin-bottom: 30px;
        }
        .loading {
            text-align: center;
            padding: 40px;
            color: #999;
        }
        .loading i { font-size: 48px; animation: spin 2s linear infinite; }
        @@keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-chart-bar"></i> Admin Reports & Analytics</h1>
            <a href="/Admin/Dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="loading">
            <i class="fas fa-spinner"></i>
            <p>Loading reports data...</p>
        </div>

        <!-- Statistics Cards -->
        <div id="statsContainer" class="stats-grid" style="display: none;">
            <div class="stat-card">
                <i class="fas fa-user-graduate" style="color: #667eea;"></i>
                <h3 id="totalStudents" style="color: #667eea;">0</h3>
                <p>Total Students</p>
                <small id="activeStudents" style="color: #28a745; font-weight: 600;"></small>
            </div>
            <div class="stat-card">
                <i class="fas fa-chalkboard-teacher" style="color: #764ba2;"></i>
                <h3 id="totalTeachers" style="color: #764ba2;">0</h3>
                <p>Total Teachers</p>
                <small id="activeTeachers" style="color: #28a745; font-weight: 600;"></small>
            </div>
            <div class="stat-card">
                <i class="fas fa-book" style="color: #17a2b8;"></i>
                <h3 id="totalCourses" style="color: #17a2b8;">0</h3>
                <p>Active Courses</p>
            </div>
            <div class="stat-card">
                <i class="fas fa-building" style="color: #28a745;"></i>
                <h3 id="totalDepartments" style="color: #28a745;">0</h3>
                <p>Departments</p>
            </div>
        </div>

        <!-- Charts Section -->
        <div id="chartsContainer" class="report-section" style="display: none;">
            <!-- Attendance Chart -->
            <div class="card">
                <h2 style="margin-bottom: 20px; color: #333;">
                    <i class="fas fa-chart-pie"></i> Overall Attendance Rate
                </h2>
                <div class="chart-container">
                    <canvas id="attendanceChart"></canvas>
                </div>
                <div style="text-align: center; margin-top: 20px;">
                    <h3 id="avgAttendance" style="color: #667eea; font-size: 32px;">0%</h3>
                    <p style="color: #666;">Average Attendance</p>
                </div>
            </div>

            <!-- Users Distribution Chart -->
            <div class="card">
                <h2 style="margin-bottom: 20px; color: #333;">
                    <i class="fas fa-chart-bar"></i> Users Distribution
                </h2>
                <div class="chart-container">
                    <canvas id="usersChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Department Statistics -->
        <div id="departmentStats" class="card" style="display: none;">
            <h2 style="margin-bottom: 20px; color: #333;">
                <i class="fas fa-building"></i> Department-wise Statistics
            </h2>
            <table style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <th style="padding: 15px; text-align: left;">Department</th>
                        <th style="padding: 15px; text-align: center;">Students</th>
                        <th style="padding: 15px; text-align: center;">Teachers</th>
                        <th style="padding: 15px; text-align: center;">Courses</th>
                    </tr>
                </thead>
                <tbody id="departmentTableBody">
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 40px; color: #999;">
                            <i class="fas fa-spinner fa-spin"></i> Loading department statistics...
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Quick Actions -->
        <div class="card">
            <h2 style="margin-bottom: 20px; color: #333;">
                <i class="fas fa-download"></i> Export Reports
            </h2>
            <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                <button class="btn" style="background: #28a745; color: white;" onclick="exportReport('students')">
                    <i class="fas fa-file-excel"></i> Export Students List
                </button>
                <button class="btn" style="background: #17a2b8; color: white;" onclick="exportReport('attendance')">
                    <i class="fas fa-file-csv"></i> Export Attendance Records
                </button>
                <button class="btn" style="background: #ffc107; color: #333;" onclick="exportReport('courses')">
                    <i class="fas fa-file-pdf"></i> Export Course Report
                </button>
            </div>
        </div>
    </div>

    <script>
        let attendanceChart, usersChart;

        // Load data when page loads
        window.onload = async function() {
            await loadReportsData();
        };

        async function loadReportsData() {
            try {
                const response = await fetch('/Admin/GetAdminReports');
                const data = await response.json();
                
                // Hide loading, show content
                document.getElementById('loadingState').style.display = 'none';
                document.getElementById('statsContainer').style.display = 'grid';
                document.getElementById('chartsContainer').style.display = 'grid';
                document.getElementById('departmentStats').style.display = 'block';
                
                // Update statistics
                document.getElementById('totalStudents').textContent = data.totalStudents;
                document.getElementById('totalTeachers').textContent = data.totalTeachers;
                document.getElementById('totalCourses').textContent = data.totalCourses;
                document.getElementById('totalDepartments').textContent = data.totalDepartments;
                document.getElementById('avgAttendance').textContent = data.avgAttendance.toFixed(1) + '%';
                document.getElementById('activeStudents').textContent = data.activeStudents + ' Active';
                document.getElementById('activeTeachers').textContent = data.activeTeachers + ' Active';
                
                // Create charts
                createAttendanceChart(data.avgAttendance);
                createUsersChart(data.totalStudents, data.totalTeachers);
                
            } catch (error) {
                console.error('Error loading reports:', error);
                document.getElementById('loadingState').innerHTML = '<i class="fas fa-exclamation-triangle" style="color: #dc3545;"></i><p style="color: #dc3545;">Error loading reports data</p>';
            }
        }

        function createAttendanceChart(avgAttendance) {
            const ctx = document.getElementById('attendanceChart').getContext('2d');
            attendanceChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Present', 'Absent/Leave'],
                    datasets: [{
                        data: [avgAttendance, 100 - avgAttendance],
                        backgroundColor: ['#28a745', '#dc3545'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        }
                    }
                }
            });
        }

        function createUsersChart(students, teachers) {
            const ctx = document.getElementById('usersChart').getContext('2d');
            usersChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Students', 'Teachers'],
                    datasets: [{
                        label: 'Number of Users',
                        data: [students, teachers],
                        backgroundColor: ['#667eea', '#764ba2'],
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        }

        function exportReport(type) {
            alert(`Export functionality for ${type} will be implemented. This would generate and download a ${type} report file.`);
            // In a real implementation, this would call an API endpoint to generate and download the report
        }
    </script>
</body>
</html>
