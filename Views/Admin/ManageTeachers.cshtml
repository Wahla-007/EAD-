@model List<AttendanceManagementSystem.Data.Entities.Teacher>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Teachers - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Admin</h2>
                <p>// Teacher Management</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Admin/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Admin/Students" class="neo-menu-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
                <a href="/Admin/Teachers" class="neo-menu-item active"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
                <a href="/Admin/Courses" class="neo-menu-item"><i class="fas fa-book"></i><span>Courses</span></a>
                <a href="/Admin/Sessions" class="neo-menu-item"><i class="fas fa-calendar-alt"></i><span>Sessions</span></a>
                <a href="/Admin/Departments" class="neo-menu-item"><i class="fas fa-building"></i><span>Departments</span></a>
                <a href="/Admin/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-chalkboard-teacher"></i> Manage Teachers</h1>
                    <p>// Add, edit, and manage teacher records</p>
                </div>
                <div class="neo-topbar-actions">
                    <button onclick="showAddTeacher()" class="neo-btn neo-btn-primary">
                        <i class="fas fa-user-plus"></i> Add Teacher
                    </button>
                    <a href="/Admin/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>All Teachers</h3>
                    <span style="font-family: var(--font-mono); font-size: 13px;">Total: @(Model?.Count ?? 0)</span>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="neo-empty">
                        <i class="fas fa-chalkboard-teacher"></i>
                        <p>No teachers found in the system</p>
                    </div>
                }
                else
                {
                    <div class="neo-table-wrapper">
                        <table class="neo-table">
                            <thead>
                                <tr>
                                    <th>Employee ID</th>
                                    <th>Teacher Name</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                    <th>Courses</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var teacher in Model)
                                {
                                    <tr>
                                        <td><strong>@teacher.EmployeeId</strong></td>
                                        <td>@teacher.User?.FullName</td>
                                        <td>@teacher.User?.Email</td>
                                        <td>@teacher.Department?.DepartmentName</td>
                                        <td>
                                            @if (teacher.CourseAssignments?.Any() == true)
                                            {
                                                <span class="neo-badge neo-badge-info">@teacher.CourseAssignments.Count() Courses</span>
                                            }
                                            else
                                            {
                                                <span class="neo-badge">None</span>
                                            }
                                        </td>
                                        <td>
                                            @if (teacher.User?.IsActive == true)
                                            {
                                                <span class="neo-badge neo-badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="neo-badge neo-badge-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <button onclick="assignCourse(@teacher.TeacherId, '@teacher.User?.FullName')" class="neo-btn neo-btn-sm neo-btn-info">
                                                <i class="fas fa-book"></i> Assign
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </main>
    </div>

    <!-- Add Teacher Modal -->
    <div id="addTeacherModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-user-plus"></i> Add New Teacher</h3>
                <button onclick="closeAddTeacher()" class="neo-modal-close">×</button>
            </div>
            <form action="/Admin/CreateTeacher" method="post">
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-user"></i> Full Name</label>
                    <input type="text" name="fullName" class="neo-input" required placeholder="Enter teacher's full name" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-envelope"></i> Email</label>
                    <input type="email" name="email" class="neo-input" required placeholder="Enter email address" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-id-card"></i> Employee ID</label>
                    <input type="text" name="employeeId" class="neo-input" required placeholder="Enter employee ID" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-building"></i> Department</label>
                    <select name="departmentId" class="neo-select" required id="departmentSelect">
                        <option value="">-- Choose Department --</option>
                    </select>
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-key"></i> Default Password</label>
                    <input type="text" name="password" class="neo-input" value="Test@123" required />
                    <small style="font-family: var(--font-mono); color: #666; font-size: 11px;">Default: Test@123</small>
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeAddTeacher()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-primary">Create Teacher</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Assign Course Modal -->
    <div id="assignModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-book"></i> Assign to Course</h3>
                <button onclick="closeModal()" class="neo-modal-close">×</button>
            </div>
            <form id="assignForm" method="post" action="/Admin/AssignTeacherToCourse">
                <input type="hidden" id="teacherId" name="teacherId" />
                <div class="neo-form-group">
                    <label class="neo-label">Teacher</label>
                    <input type="text" id="teacherName" class="neo-input" readonly style="background: var(--bg-paper);" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-book"></i> Select Course</label>
                    <select name="courseId" class="neo-select" required id="courseSelect">
                        <option value="">-- Choose Course --</option>
                    </select>
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-users"></i> Select Section</label>
                    <select name="sectionId" class="neo-select" required id="sectionSelect">
                        <option value="">-- Choose Section --</option>
                    </select>
                </div>
                <input type="hidden" id="semesterId" name="semesterId" />
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeModal()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-primary">Assign</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showAddTeacher() {
            document.getElementById('addTeacherModal').style.display = 'flex';
            loadDepartments();
        }
        function closeAddTeacher() {
            document.getElementById('addTeacherModal').style.display = 'none';
        }
        async function loadDepartments() {
            try {
                const response = await fetch('/Admin/GetDepartments');
                const departments = await response.json();
                const select = document.getElementById('departmentSelect');
                select.innerHTML = '<option value="">-- Choose Department --</option>';
                departments.forEach(dept => {
                    select.innerHTML += `<option value="${dept.departmentId}">${dept.departmentName}</option>`;
                });
            } catch (error) { console.error('Error loading departments:', error); }
        }
        function assignCourse(teacherId, teacherName) {
            document.getElementById('teacherId').value = teacherId;
            document.getElementById('teacherName').value = teacherName;
            document.getElementById('assignModal').style.display = 'flex';
            loadCourses();
            loadSections();
        }
        function closeModal() {
            document.getElementById('assignModal').style.display = 'none';
        }
        async function loadCourses() {
            try {
                const response = await fetch('/Admin/GetCoursesForAssignment');
                const courses = await response.json();
                const select = document.getElementById('courseSelect');
                select.innerHTML = '<option value="">-- Choose Course --</option>';
                courses.forEach(course => {
                    select.innerHTML += `<option value="${course.courseId}">${course.courseCode} - ${course.courseName}</option>`;
                });
            } catch (error) { console.error('Error loading courses:', error); }
        }
        async function loadSections() {
            try {
                const response = await fetch('/Admin/GetSectionsWithSemester');
                const sections = await response.json();
                const select = document.getElementById('sectionSelect');
                select.innerHTML = '<option value="">-- Choose Section --</option>';
                sections.forEach(section => {
                    select.innerHTML += `<option value="${section.sectionId}" data-semester="${section.semesterId}">${section.sectionName} (${section.sessionName} - ${section.semesterName})</option>`;
                });
                select.addEventListener('change', function() {
                    const selectedOption = this.options[this.selectedIndex];
                    document.getElementById('semesterId').value = selectedOption.getAttribute('data-semester') || '';
                });
            } catch (error) { console.error('Error loading sections:', error); }
        }
    </script>
</body>
</html>
