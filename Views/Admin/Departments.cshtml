@model List<AttendanceManagementSystem.Data.Entities.Department>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Departments - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .dept-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
        }
        .dept-card {
            background: var(--bg-cream);
            border: 3px solid #000;
            box-shadow: 5px 5px 0px #000;
            padding: 25px;
            transition: all 0.15s ease;
        }
        .dept-card:hover {
            transform: translate(-3px, -3px);
            box-shadow: 8px 8px 0px #000;
        }
        .dept-code {
            font-size: 28px;
            font-weight: 700;
            color: #9333ea;
            margin-bottom: 10px;
        }
        .dept-name {
            font-family: var(--font-mono);
            font-size: 16px;
            color: #333;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Admin</h2>
                <p>// Department Management</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Admin/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Admin/Students" class="neo-menu-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
                <a href="/Admin/Teachers" class="neo-menu-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
                <a href="/Admin/Courses" class="neo-menu-item"><i class="fas fa-book"></i><span>Courses</span></a>
                <a href="/Admin/Sessions" class="neo-menu-item"><i class="fas fa-calendar-alt"></i><span>Sessions</span></a>
                <a href="/Admin/Departments" class="neo-menu-item active"><i class="fas fa-building"></i><span>Departments</span></a>
                <a href="/Admin/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-building"></i> Manage Departments</h1>
                    <p>// Organize academic departments</p>
                </div>
                <div class="neo-topbar-actions">
                    <button onclick="showAddModal()" class="neo-btn neo-btn-primary">
                        <i class="fas fa-plus"></i> Add Department
                    </button>
                    <a href="/Admin/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>All Departments</h3>
                    <span style="font-family: var(--font-mono); font-size: 13px;">Total: @(Model?.Count ?? 0)</span>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="neo-empty">
                        <i class="fas fa-building"></i>
                        <p>No departments found</p>
                    </div>
                }
                else
                {
                    <div class="dept-grid">
                        @foreach (var dept in Model)
                        {
                            <div class="dept-card">
                                <div class="dept-code">@dept.DepartmentCode</div>
                                <div class="dept-name">@dept.DepartmentName</div>
                                <div style="margin-top: 15px;">
                                    @if (dept.IsActive)
                                    {
                                        <span class="neo-badge neo-badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="neo-badge neo-badge-danger">Inactive</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </main>
    </div>

    <!-- Add Department Modal -->
    <div id="addModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-plus"></i> Add New Department</h3>
                <button onclick="closeModal()" class="neo-modal-close">Ã—</button>
            </div>
            <form action="/Admin/CreateDepartment" method="post">
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-code"></i> Department Code</label>
                    <input type="text" name="departmentCode" class="neo-input" required placeholder="e.g., CS, SE, IT" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-building"></i> Department Name</label>
                    <input type="text" name="departmentName" class="neo-input" required placeholder="e.g., Computer Science" />
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeModal()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-primary">Create Department</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showAddModal() {
            document.getElementById('addModal').style.display = 'flex';
        }
        function closeModal() {
            document.getElementById('addModal').style.display = 'none';
        }
    </script>
</body>
</html>

