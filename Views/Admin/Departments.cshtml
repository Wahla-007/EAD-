@model List<AttendanceManagementSystem.Data.Entities.Department>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Manage Departments</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 30px;
        }
        .container { max-width: 1200px; margin: 0 auto; }
        .header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { color: #667eea; font-size: 28px; }
        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4); }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #5a6268; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        .dept-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .dept-card {
            border: 2px solid #667eea;
            border-radius: 12px;
            padding: 25px;
            transition: all 0.3s;
        }
        .dept-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        }
        .dept-code {
            font-size: 24px;
            font-weight: 700;
            color: #667eea;
            margin-bottom: 10px;
        }
        .dept-name {
            font-size: 18px;
            color: #333;
            margin-bottom: 15px;
        }
        .dept-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }
        .badge-success { background: #28a745; color: white; }
        .badge-danger { background: #dc3545; color: white; }
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        .modal-content {
            background: white;
            padding: 30px;
            border-radius: 15px;
            max-width: 500px;
            width: 90%;
        }
        .form-group { margin-bottom: 20px; }
        label { font-weight: 600; color: #333; display: block; margin-bottom: 8px; }
        input[type="text"], select {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        .empty-state i { font-size: 64px; margin-bottom: 20px; }
        .header-actions { display: flex; gap: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-building"></i> Manage Departments</h1>
            <div class="header-actions">
                <a href="#" onclick="showAddModal()" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Department
                </a>
                <a href="/Admin/Dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>

        <div class="card">
            <h2 style="margin-bottom: 20px; color: #333;">All Departments</h2>
            
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-building"></i>
                    <p>No departments found</p>
                </div>
            }
            else
            {
                <div class="dept-grid">
                    @foreach (var dept in Model)
                    {
                        <div class="dept-card">
                            <div class="dept-code">@dept.DepartmentCode</div>
                            <div class="dept-name">@dept.DepartmentName</div>
                            <div style="margin-top: 15px;">
                                @if (dept.IsActive)
                                {
                                    <span class="dept-status badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="dept-status badge-danger">Inactive</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Add Department Modal -->
    <div id="addModal" class="modal">
        <div class="modal-content">
            <h3 style="margin-bottom: 25px; color: #667eea;">
                <i class="fas fa-plus"></i> Add New Department
            </h3>
            <form action="/Admin/CreateDepartment" method="post">
                <div class="form-group">
                    <label>Department Code</label>
                    <input type="text" name="departmentCode" required placeholder="e.g., CS, SE, IT" />
                </div>

                <div class="form-group">
                    <label>Department Name</label>
                    <input type="text" name="departmentName" required placeholder="e.g., Computer Science" />
                </div>

                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeModal()" class="btn btn-secondary">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Department</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showAddModal() {
            document.getElementById('addModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('addModal').style.display = 'none';
        }
    </script>
</body>
</html>
