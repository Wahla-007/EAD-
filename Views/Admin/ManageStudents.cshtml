@model List<AttendanceManagementSystem.Data.Entities.Student>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Students - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
</head>
<body>
    <div class="neo-container">
        <!-- Admin Sidebar -->
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Admin</h2>
                <p>// Student Management</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Admin/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Admin/Students" class="neo-menu-item active"><i class="fas fa-user-graduate"></i><span>Students</span></a>
                <a href="/Admin/Teachers" class="neo-menu-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
                <a href="/Admin/Courses" class="neo-menu-item"><i class="fas fa-book"></i><span>Courses</span></a>
                <a href="/Admin/Sessions" class="neo-menu-item"><i class="fas fa-calendar-alt"></i><span>Sessions</span></a>
                <a href="/Admin/Departments" class="neo-menu-item"><i class="fas fa-building"></i><span>Departments</span></a>
                <a href="/Admin/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="neo-main">
            <!-- Top Bar -->
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-user-graduate"></i> Manage Students</h1>
                    <p>// Add, edit, and manage student records</p>
                </div>
                <div class="neo-topbar-actions">
                    <button onclick="showAddStudent()" class="neo-btn neo-btn-primary">
                        <i class="fas fa-user-plus"></i> Add Student
                    </button>
                    <a href="/Admin/Dashboard" class="neo-btn">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </div>

            <!-- Students Table -->
            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>All Students</h3>
                    <span style="font-family: var(--font-mono); font-size: 13px;">Total: @(Model?.Count ?? 0)</span>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="neo-empty">
                        <i class="fas fa-user-graduate"></i>
                        <p>No students found in the system</p>
                    </div>
                }
                else
                {
                    <div class="neo-table-wrapper">
                        <table class="neo-table">
                            <thead>
                                <tr>
                                    <th>Roll No</th>
                                    <th>Student Name</th>
                                    <th>Email</th>
                                    <th>Department</th>
                                    <th>Section</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td><strong>@student.RollNumber</strong></td>
                                        <td>@student.User?.FullName</td>
                                        <td>@student.User?.Email</td>
                                        <td>@student.Department?.DepartmentName</td>
                                        <td>
                                            @if (student.Section != null)
                                            {
                                                <span class="neo-badge neo-badge-info">@student.Section.SectionName</span>
                                            }
                                            else
                                            {
                                                <span class="neo-badge neo-badge-warning">Not Assigned</span>
                                            }
                                        </td>
                                        <td>
                                            @if (student.User?.IsActive == true)
                                            {
                                                <span class="neo-badge neo-badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="neo-badge neo-badge-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div style="display: flex; gap: 8px;">
                                                <button onclick="assignToSection(@student.StudentId, '@student.User?.FullName')" class="neo-btn neo-btn-sm neo-btn-info">
                                                    <i class="fas fa-edit"></i> Section
                                                </button>
                                                <button onclick="assignCourseToStudent(@student.StudentId, '@student.User?.FullName')" class="neo-btn neo-btn-sm neo-btn-success">
                                                    <i class="fas fa-book"></i> Course
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </main>
    </div>

    <!-- Add Student Modal -->
    <div id="addStudentModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-user-plus"></i> Add New Student</h3>
                <button onclick="closeAddStudent()" class="neo-modal-close">Ã—</button>
            </div>
            <form action="/Admin/CreateStudent" method="post">
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-user"></i> Full Name</label>
                    <input type="text" name="fullName" class="neo-input" required placeholder="Enter student's full name" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-envelope"></i> Email</label>
                    <input type="email" name="email" class="neo-input" required placeholder="Enter email address" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-id-card"></i> Roll Number</label>
                    <input type="text" name="rollNumber" class="neo-input" required placeholder="e.g., 2024-CS-001" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-building"></i> Department</label>
                    <select name="departmentId" class="neo-select" required id="deptSelect">
                        <option value="">-- Choose Department --</option>
                    </select>
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-key"></i> Default Password</label>
                    <input type="text" name="password" class="neo-input" value="Test@123" required />
                    <small style="font-family: var(--font-mono); color: #666; font-size: 11px;">Default: Test@123</small>
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeAddStudent()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-primary">Create Student</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Assign Section Modal -->
    <div id="assignModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-users"></i> Assign to Section</h3>
                <button onclick="closeModal()" class="neo-modal-close">Ã—</button>
            </div>
            <form id="assignForm" method="post" action="/Admin/AssignStudentToSection">
                <input type="hidden" id="studentId" name="studentId" />
                <div class="neo-form-group">
                    <label class="neo-label">Student</label>
                    <input type="text" id="studentName" class="neo-input" readonly style="background: var(--bg-paper);" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-users"></i> Select Section</label>
                    <select name="sectionId" class="neo-select" required id="sectionSelect">
                        <option value="">-- Choose Section --</option>
                    </select>
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeModal()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-primary">Assign</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Assign Course Modal -->
    <div id="assignCourseModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-book"></i> Assign Course</h3>
                <button onclick="closeCourseModal()" class="neo-modal-close">Ã—</button>
            </div>
            <form method="post" action="/Admin/AssignCourseToStudent">
                <input type="hidden" id="courseStudentId" name="studentId" />
                <div class="neo-form-group">
                    <label class="neo-label">Student</label>
                    <input type="text" id="courseStudentName" class="neo-input" readonly style="background: var(--bg-paper);" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-book"></i> Select Course</label>
                    <select name="assignmentId" class="neo-select" required id="courseSelect">
                        <option value="">-- Loading Courses --</option>
                    </select>
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeCourseModal()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-success">Assign Course</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showAddStudent() {
            document.getElementById('addStudentModal').style.display = 'flex';
            loadDepartmentsForStudent();
        }
        function closeAddStudent() {
            document.getElementById('addStudentModal').style.display = 'none';
        }
        async function loadDepartmentsForStudent() {
            try {
                const response = await fetch('/Admin/GetDepartments');
                const departments = await response.json();
                const select = document.getElementById('deptSelect');
                select.innerHTML = '<option value="">-- Choose Department --</option>';
                departments.forEach(dept => {
                    select.innerHTML += `<option value="${dept.departmentId}">${dept.departmentName}</option>`;
                });
            } catch (error) { console.error('Error loading departments:', error); }
        }
        function assignToSection(studentId, studentName) {
            document.getElementById('studentId').value = studentId;
            document.getElementById('studentName').value = studentName;
            document.getElementById('assignModal').style.display = 'flex';
            loadSections();
        }
        function closeModal() {
            document.getElementById('assignModal').style.display = 'none';
        }
        async function loadSections() {
            try {
                const response = await fetch('/Admin/GetSections');
                const sections = await response.json();
                const select = document.getElementById('sectionSelect');
                select.innerHTML = '<option value="">-- Choose Section --</option>';
                sections.forEach(section => {
                    select.innerHTML += `<option value="${section.sectionId}">${section.sectionName} (${section.sessionName})</option>`;
                });
            } catch (error) { console.error('Error loading sections:', error); }
        }
        function assignCourseToStudent(studentId, studentName) {
            document.getElementById('courseStudentId').value = studentId;
            document.getElementById('courseStudentName').value = studentName;
            document.getElementById('assignCourseModal').style.display = 'flex';
            loadCoursesForStudent(studentId);
        }
        function closeCourseModal() {
            document.getElementById('assignCourseModal').style.display = 'none';
        }
        async function loadCoursesForStudent(studentId) {
            try {
                const response = await fetch(`/Admin/GetCoursesForStudent?studentId=${studentId}`);
                const data = await response.json();
                const select = document.getElementById('courseSelect');
                if (!data.availableCourses || data.availableCourses.length === 0) {
                    select.innerHTML = '<option value="">No courses available</option>';
                    return;
                }
                select.innerHTML = '<option value="">-- Choose Course --</option>';
                data.availableCourses.forEach(course => {
                    const isRegistered = data.registeredIds && data.registeredIds.includes(course.assignmentId);
                    const optionText = `${course.courseCode} - ${course.courseName} (${course.teacherName})`;
                    if (isRegistered) {
                        select.innerHTML += `<option value="${course.assignmentId}" disabled>${optionText} âœ“ Registered</option>`;
                    } else {
                        select.innerHTML += `<option value="${course.assignmentId}">${optionText}</option>`;
                    }
                });
            } catch (error) { console.error('Error loading courses:', error); }
        }
    </script>
</body>
</html>


