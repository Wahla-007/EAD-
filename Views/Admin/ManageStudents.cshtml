@model List<AttendanceManagementSystem.Data.Entities.Student>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Manage Students</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .container { max-width: 1400px; margin: 0 auto; padding: 30px; }
        .header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { color: #667eea; font-size: 28px; }
        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4); }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #5a6268; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }
        td {
            padding: 15px;
            border-bottom: 1px solid #eee;
        }
        tr:hover { background: #f8f9fa; }
        .badge {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }
        .badge-success { background: #28a745; color: white; }
        .badge-danger { background: #dc3545; color: white; }
        .action-btns { display: flex; gap: 10px; }
        .btn-sm {
            padding: 8px 15px;
            font-size: 12px;
            border-radius: 6px;
        }
        .btn-info { background: #17a2b8; color: white; }
        .btn-info:hover { background: #138496; }
        select, input[type="text"], input[type="email"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-top: 8px;
            font-size: 14px;
        }
        .form-group { margin-bottom: 20px; }
        label { font-weight: 600; color: #333; display: block; }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        .empty-state i { font-size: 64px; margin-bottom: 20px; }
        .header-actions { display: flex; gap: 10px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-users"></i> Manage Students</h1>
            <div class="header-actions">
                <a href="#" onclick="showAddStudent()" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Add New Student
                </a>
                <a href="#" onclick="showAssignSection()" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Assign to Section
                </a>
                <a href="/Admin/Dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>

        <div class="card">
            <h2 style="margin-bottom: 20px; color: #333;">All Students</h2>
            
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-user-graduate"></i>
                    <p>No students found in the system</p>
                </div>
            }
            else
            {
                <table>
                    <thead>
                        <tr>
                            <th>Roll No</th>
                            <th>Student Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Section</th>
                            <th>Session</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td><strong>@student.RollNumber</strong></td>
                                <td>@student.User?.FullName</td>
                                <td>@student.User?.Email</td>
                                <td>@student.Department?.DepartmentName</td>
                                <td>@Html.Raw(student.Section?.SectionName ?? "<span style='color: #dc3545'>Not Assigned</span>")</td>
                                <td>@(student.Section?.Semester?.Session?.SessionName ?? "-")</td>
                                <td>
                                    @if (student.User?.IsActive == true)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactive</span>
                                    }
                                </td>
                                <td class="action-btns">
                                    <button onclick="assignToSection(@student.StudentId, '@student.User?.FullName')" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i> Assign Section
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>

    <!-- Add Student Modal -->
    <div id="addStudentModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
        <div style="background: white; padding: 30px; border-radius: 15px; max-width: 500px; width: 90%;">
            <h3 style="margin-bottom: 25px; color: #667eea;">
                <i class="fas fa-user-plus"></i> Add New Student
            </h3>
            <form action="/Admin/CreateStudent" method="post">
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="text" name="fullName" required placeholder="Enter student's full name" />
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" required placeholder="Enter email address" />
                </div>

                <div class="form-group">
                    <label>Roll Number</label>
                    <input type="text" name="rollNumber" required placeholder="Enter roll number (e.g., 21K-1234)" />
                </div>

                <div class="form-group">
                    <label>Department</label>
                    <select name="departmentId" required id="deptSelect">
                        <option value="">-- Choose Department --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Default Password</label>
                    <input type="text" name="password" value="Test@123" required />
                    <small style="color: #999; font-size: 12px;">Default: Test@123 (Student can change later)</small>
                </div>

                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeAddStudent()" class="btn btn-secondary">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Student</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Assign Section Modal -->
    <div id="assignModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
        <div style="background: white; padding: 30px; border-radius: 15px; max-width: 500px; width: 90%;">
            <h3 style="margin-bottom: 20px; color: #667eea;">Assign Student to Section</h3>
            <form id="assignForm" method="post" action="/Admin/AssignStudentToSection">
                <input type="hidden" id="studentId" name="studentId" />
                
                <div class="form-group">
                    <label>Student</label>
                    <input type="text" id="studentName" readonly style="background: #f8f9fa;" />
                </div>

                <div class="form-group">
                    <label>Select Section</label>
                    <select name="sectionId" required id="sectionSelect">
                        <option value="">-- Choose Section --</option>
                    </select>
                </div>

                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeModal()" class="btn btn-secondary">Cancel</button>
                    <button type="submit" class="btn btn-primary">Assign</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showAddStudent() {
            document.getElementById('addStudentModal').style.display = 'flex';
            loadDepartmentsForStudent();
        }

        function closeAddStudent() {
            document.getElementById('addStudentModal').style.display = 'none';
        }

        async function loadDepartmentsForStudent() {
            try {
                const response = await fetch('/Admin/GetDepartments');
                const departments = await response.json();
                const select = document.getElementById('deptSelect');
                select.innerHTML = '<option value="">-- Choose Department --</option>';
                departments.forEach(dept => {
                    select.innerHTML += `<option value="${dept.departmentId}">${dept.departmentName}</option>`;
                });
            } catch (error) {
                console.error('Error loading departments:', error);
            }
        }

        function showAssignSection() {
            document.getElementById('assignModal').style.display = 'flex';
            loadSections();
        }

        function assignToSection(studentId, studentName) {
            document.getElementById('studentId').value = studentId;
            document.getElementById('studentName').value = studentName;
            showAssignSection();
        }

        function closeModal() {
            document.getElementById('assignModal').style.display = 'none';
        }

        async function loadSections() {
            try {
                const response = await fetch('/Admin/GetSections');
                const sections = await response.json();
                const select = document.getElementById('sectionSelect');
                select.innerHTML = '<option value="">-- Choose Section --</option>';
                sections.forEach(section => {
                    select.innerHTML += `<option value="${section.sectionId}">${section.sectionName} (${section.sessionName})</option>`;
                });
            } catch (error) {
                console.error('Error loading sections:', error);
            }
        }
    </script>
</body>
</html>

