@model List<AttendanceManagementSystem.Data.Entities.LmsRegistration>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LMS Registrations - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Admin</h2>
                <p>// LMS Management</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Admin/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Admin/Students" class="neo-menu-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
                <a href="/Admin/Teachers" class="neo-menu-item"><i class="fas fa-chalkboard-teacher"></i><span>Teachers</span></a>
                <a href="/Admin/Courses" class="neo-menu-item"><i class="fas fa-book"></i><span>Courses</span></a>
                <a href="/Admin/Sessions" class="neo-menu-item"><i class="fas fa-calendar-alt"></i><span>Sessions</span></a>
                <a href="/Admin/LMSRegistrations" class="neo-menu-item active"><i class="fas fa-laptop-code"></i><span>LMS</span></a>
                <a href="/Admin/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-laptop-code"></i> LMS Registrations</h1>
                    <p>// Manage LMS credentials for users</p>
                </div>
                <div class="neo-topbar-actions">
                    <button onclick="showCreateModal()" class="neo-btn neo-btn-primary">
                        <i class="fas fa-plus"></i> Create Registration
                    </button>
                    <a href="/Admin/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>All LMS Registrations</h3>
                    <span style="font-family: var(--font-mono); font-size: 13px;">Total: @(Model?.Count ?? 0)</span>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="neo-empty">
                        <i class="fas fa-laptop-code"></i>
                        <p>No LMS registrations found</p>
                    </div>
                }
                else
                {
                    <div class="neo-table-wrapper">
                        <table class="neo-table">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>LMS Username</th>
                                    <th>Registration Date</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var registration in Model)
                                {
                                    <tr>
                                        <td><strong>@registration.User?.FullName</strong></td>
                                        <td>@registration.User?.Email</td>
                                        <td><span class="neo-badge neo-badge-info">@registration.User?.Role</span></td>
                                        <td style="font-family: var(--font-mono);">@registration.LMSUsername</td>
                                        <td>@registration.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (registration.IsActive)
                                            {
                                                <span class="neo-badge neo-badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="neo-badge neo-badge-danger">Inactive</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </main>
    </div>

    <!-- Create LMS Registration Modal -->
    <div id="createModal" class="neo-modal-overlay" style="display: none;">
        <div class="neo-modal">
            <div class="neo-modal-header">
                <h3><i class="fas fa-laptop-code"></i> Create LMS Registration</h3>
                <button onclick="closeModal()" class="neo-modal-close">Ã—</button>
            </div>
            <form method="post" action="/Admin/CreateLMSRegistration">
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-user"></i> Select User</label>
                    <select name="userId" class="neo-select" required id="userSelect">
                        <option value="">-- Choose User --</option>
                    </select>
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-user-tag"></i> LMS Username</label>
                    <input type="text" name="lmsUsername" class="neo-input" required placeholder="Enter LMS username" />
                </div>
                <div class="neo-form-group">
                    <label class="neo-label"><i class="fas fa-key"></i> LMS Password</label>
                    <input type="password" name="lmsPassword" class="neo-input" required placeholder="Enter LMS password" />
                </div>
                <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 25px;">
                    <button type="button" onclick="closeModal()" class="neo-btn">Cancel</button>
                    <button type="submit" class="neo-btn neo-btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showCreateModal() {
            document.getElementById('createModal').style.display = 'flex';
            loadUsers();
        }
        function closeModal() {
            document.getElementById('createModal').style.display = 'none';
        }
        async function loadUsers() {
            try {
                const response = await fetch('/Admin/GetAllUsers');
                const users = await response.json();
                const select = document.getElementById('userSelect');
                select.innerHTML = '<option value="">-- Choose User --</option>';
                users.forEach(user => {
                    select.innerHTML += `<option value="${user.userId}">${user.fullName} (${user.role}) - ${user.email}</option>`;
                });
            } catch (error) { console.error('Error loading users:', error); }
        }
    </script>
</body>
</html>

