@model AttendanceManagementSystem.Data.Entities.Student
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #06b6d4; }
        .neo-sidebar-header { background: #000; color: #06b6d4; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #06b6d4; }
        
        .profile-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; }
        .info-item {
            padding: 20px;
            background: var(--bg-paper);
            border: 2px solid #000;
            border-left: 6px solid #06b6d4;
        }
        .info-label {
            font-size: 11px;
            font-family: var(--font-mono);
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #666;
            margin-bottom: 8px;
        }
        .info-value {
            font-size: 18px;
            font-weight: 700;
            color: #000;
        }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Student</h2>
                <p>// My Profile</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Student/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Student/MyCourses" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Student/RegisterCourses" class="neo-menu-item"><i class="fas fa-graduation-cap"></i><span>Register</span></a>
                <a href="/Student/Attendance" class="neo-menu-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Student/Schedule" class="neo-menu-item"><i class="fas fa-clock"></i><span>Schedule</span></a>
                <a href="/Student/Profile" class="neo-menu-item active"><i class="fas fa-user"></i><span>Profile</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-user-circle"></i> My Profile</h1>
                    <p>// Your account information</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Account/ChangePassword" class="neo-btn neo-btn-primary"><i class="fas fa-key"></i> Change Password</a>
                    <a href="/Student/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>Personal Information</h3>
                </div>
                <div class="profile-grid">
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-user"></i> Full Name</div>
                        <div class="info-value">@Model.User?.FullName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-envelope"></i> Email Address</div>
                        <div class="info-value">@Model.User?.Email</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-id-card"></i> Roll Number</div>
                        <div class="info-value">@Model.RollNumber</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-building"></i> Department</div>
                        <div class="info-value">@Model.Department?.DepartmentName</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-users"></i> Section</div>
                        <div class="info-value">
                            @if (Model.Section != null)
                            {
                                @Model.Section.SectionName
                            }
                            else
                            {
                                <span style="color: #999;">Not Assigned</span>
                            }
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-calendar"></i> Enrollment Date</div>
                        <div class="info-value">@Model.EnrollmentDate.ToString("MMM dd, yyyy")</div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-check-circle"></i> Account Status</div>
                        <div class="info-value">
                            @if (Model.User?.IsActive == true)
                            {
                                <span class="neo-badge neo-badge-success">Active</span>
                            }
                            else
                            {
                                <span class="neo-badge neo-badge-danger">Inactive</span>
                            }
                        </div>
                    </div>
                    <div class="info-item">
                        <div class="info-label"><i class="fas fa-chart-line"></i> CGPA</div>
                        <div class="info-value">
                            @if (Model.CGPA.HasValue)
                            {
                                @Model.CGPA.Value.ToString("0.00")
                            }
                            else
                            {
                                <span style="color: #999;">N/A</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>Account Settings</h3>
                </div>
                <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                    <a href="/Account/ChangePassword" class="neo-btn neo-btn-warning">
                        <i class="fas fa-key"></i> Change Password
                    </a>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
