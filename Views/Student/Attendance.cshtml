@model Dictionary<string, decimal>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Attendance - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #06b6d4; }
        .neo-sidebar-header { background: #000; color: #06b6d4; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #06b6d4; }
        
        .attendance-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 25px; }
        .attendance-card {
            background: var(--bg-cream);
            padding: 30px;
            border: 3px solid #000;
            box-shadow: 5px 5px 0px #000;
            text-align: center;
        }
        .course-name { font-size: 16px; font-weight: 700; color: #000; margin-bottom: 20px; }
        .percentage {
            font-size: 56px;
            font-weight: 700;
            font-family: var(--font-mono);
            margin: 15px 0;
        }
        .percentage.good { color: #22c55e; }
        .percentage.warning { color: #f97316; }
        .percentage.danger { color: #ef4444; }
        .status { font-size: 14px; font-weight: 600; padding: 8px 16px; display: inline-block; border: 2px solid #000; }
        .status.good { background: #dcfce7; }
        .status.warning { background: #fef3c7; }
        .status.danger { background: #fee2e2; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Student</h2>
                <p>// Attendance Records</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Student/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Student/MyCourses" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Student/RegisterCourses" class="neo-menu-item"><i class="fas fa-graduation-cap"></i><span>Register</span></a>
                <a href="/Student/Attendance" class="neo-menu-item active"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Student/Profile" class="neo-menu-item"><i class="fas fa-user"></i><span>Profile</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-calendar-check"></i> My Attendance</h1>
                    <p>// Track your attendance across courses</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Student/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="attendance-grid">
                    @foreach (var item in Model)
                    {
                        var colorClass = item.Value >= 75 ? "good" : item.Value >= 60 ? "warning" : "danger";
                        <div class="attendance-card">
                            <div class="course-name">@item.Key</div>
                            <div class="percentage @colorClass">@item.Value%</div>
                            <div class="status @colorClass">
                                @if (item.Value >= 75)
                                {
                                    <i class="fas fa-check-circle"></i> <span>Good Standing</span>
                                }
                                else if (item.Value >= 60)
                                {
                                    <i class="fas fa-exclamation-triangle"></i> <span>Warning</span>
                                }
                                else
                                {
                                    <i class="fas fa-times-circle"></i> <span>Below Required</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="neo-card">
                    <div class="neo-empty">
                        <i class="fas fa-calendar-times"></i>
                        <p>No Attendance Records</p>
                        <p style="font-size: 14px; margin-top: 10px;">No attendance data available yet.</p>
                    </div>
                </div>
            }
        </main>
    </div>
</body>
</html>

