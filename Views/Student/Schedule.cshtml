@model List<AttendanceManagementSystem.Data.Entities.Timetable>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Schedule - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #06b6d4; }
        .neo-sidebar-header { background: #000; color: #06b6d4; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #06b6d4; }
        .day-name { font-weight: 700; color: #06b6d4; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Student</h2>
                <p>// Class Schedule</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Student/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Student/MyCourses" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Student/RegisterCourses" class="neo-menu-item"><i class="fas fa-graduation-cap"></i><span>Register</span></a>
                <a href="/Student/Attendance" class="neo-menu-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Student/Schedule" class="neo-menu-item active"><i class="fas fa-clock"></i><span>Schedule</span></a>
                <a href="/Student/Profile" class="neo-menu-item"><i class="fas fa-user"></i><span>Profile</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-calendar-alt"></i> My Class Schedule</h1>
                    <p>// Your weekly timetable</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Student/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>Weekly Timetable</h3>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="neo-empty">
                        <i class="fas fa-calendar-times"></i>
                        <p>No timetable available</p>
                        <p style="font-size: 14px; margin-top: 10px;">Timetable will appear once admin assigns class schedules</p>
                    </div>
                }
                else
                {
                    var days = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
                    <div class="neo-table-wrapper">
                        <table class="neo-table">
                            <thead>
                                <tr>
                                    <th>Day</th>
                                    <th>Time</th>
                                    <th>Course</th>
                                    <th>Teacher</th>
                                    <th>Room</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dayGroup in Model.GroupBy(t => t.DayOfWeek).OrderBy(g => g.Key))
                                {
                                    var dayName = days[dayGroup.Key - 1];
                                    foreach (var schedule in dayGroup.OrderBy(s => s.StartTime))
                                    {
                                        <tr>
                                            <td class="day-name">@dayName</td>
                                            <td>
                                                <span style="font-family: var(--font-mono);">
                                                    @schedule.StartTime.ToString(@"hh\:mm") - @schedule.EndTime.ToString(@"hh\:mm")
                                                </span>
                                            </td>
                                            <td>
                                                <div style="font-weight: 700;">@schedule.Assignment?.Course?.CourseCode</div>
                                                <div style="font-size: 13px; color: #666; font-family: var(--font-mono);">@schedule.Assignment?.Course?.CourseName</div>
                                            </td>
                                            <td>
                                                <i class="fas fa-chalkboard-teacher" style="color: #06b6d4; margin-right: 5px;"></i>
                                                @schedule.Assignment?.Teacher?.User?.FullName
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(schedule.RoomNumber))
                                                {
                                                    <span class="neo-badge neo-badge-info">@schedule.RoomNumber</span>
                                                }
                                                else
                                                {
                                                    <span style="color: #999;">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </main>
    </div>
</body>
</html>
