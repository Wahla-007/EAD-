@model AttendanceManagementSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Student Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        /* Student Theme - Cyan Accent */
        .neo-sidebar { background: #06b6d4; }
        .neo-sidebar-header { background: #000; color: #06b6d4; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #06b6d4; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Student</h2>
                <p>// @Model.FullName</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="@Url.Action("Dashboard", "Student")" class="neo-menu-item active"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="@Url.Action("MyCourses", "Student")" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="@Url.Action("RegisterCourses", "Student")" class="neo-menu-item"><i class="fas fa-graduation-cap"></i><span>Register</span></a>
                <a href="@Url.Action("Attendance", "Student")" class="neo-menu-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="@Url.Action("Schedule", "Student")" class="neo-menu-item"><i class="fas fa-clock"></i><span>Schedule</span></a>
                <a href="@Url.Action("Profile", "Student")" class="neo-menu-item"><i class="fas fa-user"></i><span>Profile</span></a>
                <a href="@Url.Action("ChangePassword", "Account")" class="neo-menu-item"><i class="fas fa-key"></i><span>Password</span></a>
                <a href="@Url.Action("Logout", "Account")" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1>Welcome, @Model.FullName!</h1>
                    <p>// Your academic overview</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="@Url.Action("ChangePassword", "Account")" class="neo-btn"><i class="fas fa-key"></i> Password</a>
                    <a href="@Url.Action("Logout", "Account")" class="neo-btn neo-btn-info"><i class="fas fa-sign-out-alt"></i> Logout</a>
                </div>
            </div>

            <div class="neo-stats-grid">
                <div class="neo-stat-card cyan">
                    <div class="neo-stat-icon cyan"><i class="fas fa-book"></i></div>
                    <div class="neo-stat-value">3</div>
                    <div class="neo-stat-label">Enrolled Courses</div>
                </div>
                <div class="neo-stat-card green">
                    <div class="neo-stat-icon green"><i class="fas fa-percentage"></i></div>
                    <div class="neo-stat-value">82%</div>
                    <div class="neo-stat-label">Attendance Rate</div>
                </div>
                <div class="neo-stat-card orange">
                    <div class="neo-stat-icon orange"><i class="fas fa-calendar-check"></i></div>
                    <div class="neo-stat-value">4</div>
                    <div class="neo-stat-label">Classes/Week</div>
                </div>
                <div class="neo-stat-card yellow">
                    <div class="neo-stat-icon yellow"><i class="fas fa-star"></i></div>
                    <div class="neo-stat-value">A</div>
                    <div class="neo-stat-label">Status</div>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); gap: 25px;">
                <div class="neo-card">
                    <div class="neo-card-header">
                        <h3>Today's Schedule</h3>
                        <a href="@Url.Action("Schedule", "Student")" style="font-family: var(--font-mono); color: #06b6d4; text-decoration: none; font-size: 13px; font-weight: 600; padding: 5px 10px; border: 2px solid #06b6d4;">View All â†’</a>
                    </div>
                    <div class="neo-empty">
                        <i class="fas fa-calendar-day"></i>
                        <p>No classes scheduled for today</p>
                    </div>
                </div>
                <div class="neo-card">
                    <div class="neo-card-header">
                        <h3>Quick Actions</h3>
                    </div>
                    <div style="display: flex; flex-direction: column; gap: 12px;">
                        <a href="@Url.Action("MyCourses", "Student")" class="neo-btn" style="width: 100%; justify-content: flex-start;">
                            <i class="fas fa-book" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; background: #06b6d4; border: 2px solid #000;"></i>
                            <span>View My Courses</span>
                        </a>
                        <a href="@Url.Action("Attendance", "Student")" class="neo-btn" style="width: 100%; justify-content: flex-start;">
                            <i class="fas fa-calendar-check" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; background: #22c55e; border: 2px solid #000;"></i>
                            <span>Check Attendance</span>
                        </a>
                        <a href="@Url.Action("RegisterCourses", "Student")" class="neo-btn" style="width: 100%; justify-content: flex-start;">
                            <i class="fas fa-plus-circle" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; background: #f97316; color: white; border: 2px solid #000;"></i>
                            <span>Register for Courses</span>
                        </a>
                        <a href="@Url.Action("Profile", "Student")" class="neo-btn" style="width: 100%; justify-content: flex-start;">
                            <i class="fas fa-user" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; background: #9333ea; color: white; border: 2px solid #000;"></i>
                            <span>View Profile</span>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
