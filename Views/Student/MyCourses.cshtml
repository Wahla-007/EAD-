@model List<AttendanceManagementSystem.Data.Entities.StudentCourseRegistration>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>My Courses</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: 'Inter', sans-serif; background: #f5f7fa; min-height: 100vh; padding: 40px 20px; }
        .container { max-width: 1200px; margin: 0 auto; }
        .header { background: white; padding: 30px; border-radius: 12px; margin-bottom: 30px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); display: flex; justify-content: space-between; align-items: center; }
        h1 { font-size: 32px; color: #333; }
        .btn { padding: 12px 24px; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; text-decoration: none; border-radius: 8px; display: inline-flex; align-items: center; gap: 8px; transition: transform 0.3s; }
        .btn:hover { transform: translateY(-2px); box-shadow: 0 6px 20px rgba(240, 147, 251, 0.4); }
        .courses-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 20px; }
        .course-card { background: white; padding: 25px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.05); transition: transform 0.3s; }
        .course-card:hover { transform: translateY(-5px); box-shadow: 0 8px 20px rgba(0,0,0,0.1); }
        .course-code { color: #f093fb; font-weight: 600; margin-bottom: 10px; }
        .course-name { font-size: 20px; font-weight: 600; color: #333; margin-bottom: 15px; }
        .course-info { display: flex; gap: 20px; margin-top: 15px; }
        .info-item { display: flex; align-items: center; gap: 8px; color: #666; font-size: 14px; }
        .empty-state { text-align: center; padding: 80px 20px; }
        .empty-icon { font-size: 80px; color: #ddd; margin-bottom: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-book"></i> My Courses</h1>
            <a href="@Url.Action("Dashboard", "Student")" class="btn"><i class="fas fa-arrow-left"></i> Back</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="courses-grid">
                @foreach (var registration in Model)
                {
                    <div class="course-card">
                        <div class="course-code">@registration.Assignment?.Course?.CourseCode</div>
                        <div class="course-name">@registration.Assignment?.Course?.CourseName</div>
                        <div class="course-info">
                            <div class="info-item">
                                <i class="fas fa-user"></i>
                                <span>@registration.Assignment?.Teacher?.User?.FullName</span>
                            </div>
                            <div class="info-item">
                                <i class="fas fa-credit-card"></i>
                                <span>@registration.Assignment?.Course?.CreditHours Credits</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon"><i class="fas fa-book-open"></i></div>
                <h2 style="color: #666; margin-bottom: 10px;">No Courses Yet</h2>
                <p style="color: #999;">You haven't registered for any courses yet.</p>
            </div>
        }
    </div>
</body>
</html>
