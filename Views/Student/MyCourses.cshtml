@model List<AttendanceManagementSystem.Data.Entities.StudentCourseRegistration>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Courses - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #06b6d4; }
        .neo-sidebar-header { background: #000; color: #06b6d4; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #06b6d4; }
        
        .courses-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 25px; }
        .course-card {
            background: var(--bg-cream);
            padding: 25px;
            border: 3px solid #000;
            box-shadow: 5px 5px 0px #000;
            transition: all 0.15s ease;
        }
        .course-card:hover {
            transform: translate(-3px, -3px);
            box-shadow: 8px 8px 0px #000;
        }
        .course-code { font-size: 14px; font-weight: 700; color: #06b6d4; margin-bottom: 8px; letter-spacing: 1px; }
        .course-name { font-size: 20px; font-weight: 700; color: #000; margin-bottom: 15px; }
        .course-info { display: flex; flex-wrap: wrap; gap: 15px; margin-top: 15px; padding-top: 15px; border-top: 2px dashed #ccc; }
        .info-item { display: flex; align-items: center; gap: 8px; font-family: var(--font-mono); font-size: 13px; color: #444; }
        .info-item i { color: #06b6d4; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Student</h2>
                <p>// My Courses</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Student/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Student/MyCourses" class="neo-menu-item active"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Student/RegisterCourses" class="neo-menu-item"><i class="fas fa-graduation-cap"></i><span>Register</span></a>
                <a href="/Student/Attendance" class="neo-menu-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Student/Schedule" class="neo-menu-item"><i class="fas fa-clock"></i><span>Schedule</span></a>
                <a href="/Student/Profile" class="neo-menu-item"><i class="fas fa-user"></i><span>Profile</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-book"></i> My Courses</h1>
                    <p>// Courses you are registered for</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Student/RegisterCourses" class="neo-btn neo-btn-primary"><i class="fas fa-plus"></i> Register More</a>
                    <a href="/Student/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="courses-grid">
                    @foreach (var registration in Model)
                    {
                        <div class="course-card">
                            <div class="course-code">@registration.Assignment?.Course?.CourseCode</div>
                            <div class="course-name">@registration.Assignment?.Course?.CourseName</div>
                            <div class="course-info">
                                <div class="info-item">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                    <span>@registration.Assignment?.Teacher?.User?.FullName</span>
                                </div>
                                <div class="info-item">
                                    <i class="fas fa-clock"></i>
                                    <span>@registration.Assignment?.Course?.CreditHours CH</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="neo-card">
                    <div class="neo-empty">
                        <i class="fas fa-book-open"></i>
                        <p>No Courses Yet</p>
                        <p style="font-size: 14px; margin-top: 10px;">You haven't registered for any courses yet.</p>
                        <a href="/Student/RegisterCourses" class="neo-btn neo-btn-primary" style="margin-top: 20px;">
                            <i class="fas fa-plus"></i> Register for Courses
                        </a>
                    </div>
                </div>
            }
        </main>
    </div>
</body>
</html>
