@model List<AttendanceManagementSystem.Data.Entities.StudentCourseRegistration>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Students - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #22c55e; }
        .neo-sidebar-header { background: #000; color: #22c55e; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #22c55e; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Teacher</h2>
                <p>// My Students</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Teacher/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Teacher/MyCourses" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Teacher/Attendance" class="neo-menu-item"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Teacher/Students" class="neo-menu-item active"><i class="fas fa-user-graduate"></i><span>Students</span></a>

                <a href="/Teacher/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-user-graduate"></i> My Students</h1>
                    <p>// Students enrolled in your courses</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Teacher/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header">
                    <h3>Students in My Courses</h3>
                    <span style="font-family: var(--font-mono); font-size: 13px;">Total: @(Model?.Count ?? 0)</span>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="neo-empty">
                        <i class="fas fa-user-graduate"></i>
                        <p>No students enrolled in your courses yet</p>
                    </div>
                }
                else
                {
                    <div class="neo-table-wrapper">
                        <table class="neo-table">
                            <thead>
                                <tr>
                                    <th>Roll Number</th>
                                    <th>Student Name</th>
                                    <th>Email</th>
                                    <th>Course</th>
                                    <th>Section</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var registration in Model)
                                {
                                    <tr>
                                        <td><strong>@registration.Student?.RollNumber</strong></td>
                                        <td>@registration.Student?.User?.FullName</td>
                                        <td>@registration.Student?.User?.Email</td>
                                        <td>
                                            <strong>@registration.Assignment?.Course?.CourseCode</strong><br />
                                            <small style="font-family: var(--font-mono); color: #666;">@registration.Assignment?.Course?.CourseName</small>
                                        </td>
                                        <td>@registration.Assignment?.Section?.SectionName</td>
                                        <td>
                                            @if (registration.Status == "Registered")
                                            {
                                                <span class="neo-badge neo-badge-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="neo-badge neo-badge-warning">@registration.Status</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </main>
    </div>
</body>
</html>
