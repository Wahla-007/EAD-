@model AttendanceManagementSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    
    <!-- Neo-Brutalist Typography -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
        /* ============================================
           NEO-BRUTALIST - TEACHER THEME (GREEN)
           ============================================ */
        :root {
            --bg-paper: #f5f5f0;
            --bg-cream: #fffef9;
            --accent-primary: #22c55e;
            --accent-secondary: #16a34a;
            --accent-yellow: #fde047;
            --accent-orange: #f97316;
            --accent-cyan: #06b6d4;
            --text-black: #000000;
            --border-black: #000000;
            --shadow-black: #000000;
            --font-display: 'Space Grotesk', sans-serif;
            --font-mono: 'JetBrains Mono', monospace;
            --border-thick: 3px;
            --shadow-offset: 5px;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: var(--font-display);
            background-color: var(--bg-paper);
            background-image: 
                linear-gradient(rgba(0,0,0,0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0,0,0,0.03) 1px, transparent 1px);
            background-size: 20px 20px;
        }

        .dashboard-container { display: flex; min-height: 100vh; }

        /* SIDEBAR */
        .sidebar {
            width: 280px;
            background: var(--accent-primary);
            border-right: var(--border-thick) solid var(--border-black);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 30px 25px;
            border-bottom: var(--border-thick) solid var(--border-black);
            background: var(--text-black);
            color: var(--accent-primary);
        }

        .sidebar-header h2 {
            font-size: 22px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .sidebar-header p {
            font-family: var(--font-mono);
            font-size: 13px;
            margin-top: 5px;
            color: white;
        }

        .sidebar-menu { padding: 15px 0; }

        .menu-item {
            padding: 14px 25px;
            display: flex;
            align-items: center;
            color: var(--text-black);
            text-decoration: none;
            font-weight: 600;
            font-size: 14px;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            transition: all 0.1s ease;
        }

        .menu-item:hover {
            background: var(--text-black);
            color: var(--accent-primary);
            padding-left: 30px;
        }

        .menu-item.active {
            background: var(--text-black);
            color: var(--accent-primary);
        }

        .menu-item i { margin-right: 15px; font-size: 16px; width: 20px; text-align: center; }

        /* MAIN CONTENT */
        .main-content { flex: 1; margin-left: 280px; padding: 30px; }

        .top-bar {
            background: var(--bg-cream);
            padding: 25px 30px;
            border: var(--border-thick) solid var(--border-black);
            box-shadow: var(--shadow-offset) var(--shadow-offset) 0px var(--shadow-black);
            margin-bottom: 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .welcome-text h1 { font-size: 28px; font-weight: 700; color: var(--text-black); margin-bottom: 5px; }
        .welcome-text p { font-family: var(--font-mono); color: #555; font-size: 14px; }

        .user-actions { display: flex; gap: 15px; }

        /* BUTTONS */
        .btn {
            padding: 12px 20px;
            font-family: var(--font-display);
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            border: var(--border-thick) solid var(--border-black);
            box-shadow: 4px 4px 0px var(--shadow-black);
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.1s ease;
        }

        .btn-primary { background: var(--accent-primary); color: var(--text-black); }
        .btn-secondary { background: var(--bg-cream); color: var(--text-black); }

        .btn:hover { transform: translate(-2px, -2px); box-shadow: 6px 6px 0px var(--shadow-black); }
        .btn:active { transform: translate(3px, 3px); box-shadow: 0px 0px 0px var(--shadow-black); }

        /* STATS */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--bg-cream);
            padding: 25px;
            border: var(--border-thick) solid var(--border-black);
            box-shadow: var(--shadow-offset) var(--shadow-offset) 0px var(--shadow-black);
            transition: all 0.15s ease;
        }

        .stat-card:hover { transform: translate(-3px, -3px); box-shadow: 8px 8px 0px var(--shadow-black); }

        .stat-card.green { border-left: 8px solid var(--accent-primary); }
        .stat-card.orange { border-left: 8px solid var(--accent-orange); }
        .stat-card.cyan { border-left: 8px solid var(--accent-cyan); }
        .stat-card.yellow { border-left: 8px solid var(--accent-yellow); }

        .stat-icon {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 22px;
            border: var(--border-thick) solid var(--border-black);
            margin-bottom: 15px;
        }

        .stat-icon.green { background: var(--accent-primary); }
        .stat-icon.orange { background: var(--accent-orange); color: white; }
        .stat-icon.cyan { background: var(--accent-cyan); }
        .stat-icon.yellow { background: var(--accent-yellow); }

        .stat-value { font-size: 42px; font-weight: 700; color: var(--text-black); line-height: 1; }
        .stat-label { font-family: var(--font-mono); font-size: 13px; color: #555; text-transform: uppercase; letter-spacing: 1px; margin-top: 8px; }

        /* CARDS */
        .content-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
        }

        .card {
            background: var(--bg-cream);
            padding: 25px;
            border: var(--border-thick) solid var(--border-black);
            box-shadow: var(--shadow-offset) var(--shadow-offset) 0px var(--shadow-black);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 15px;
            margin-bottom: 20px;
            border-bottom: 2px dashed #ccc;
        }

        .card-header h3 { font-size: 18px; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; }

        .card-header a {
            font-family: var(--font-mono);
            color: var(--accent-secondary);
            text-decoration: none;
            font-size: 13px;
            font-weight: 600;
            padding: 5px 10px;
            border: 2px solid var(--accent-secondary);
            transition: all 0.1s ease;
        }

        .card-header a:hover { background: var(--accent-primary); color: var(--text-black); }

        .quick-actions { display: flex; flex-direction: column; gap: 12px; }

        .quick-btn {
            width: 100%;
            padding: 15px 20px;
            background: var(--bg-paper);
            border: var(--border-thick) solid var(--border-black);
            box-shadow: 4px 4px 0px var(--shadow-black);
            font-family: var(--font-display);
            font-weight: 700;
            font-size: 14px;
            text-decoration: none;
            color: var(--text-black);
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.1s ease;
        }

        .quick-btn:hover {
            background: var(--accent-yellow);
            transform: translate(-2px, -2px);
            box-shadow: 6px 6px 0px var(--shadow-black);
        }

        .quick-btn:active { transform: translate(3px, 3px); box-shadow: 0px 0px 0px var(--shadow-black); }

        .quick-btn i {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--accent-primary);
            border: 2px solid var(--border-black);
            font-size: 14px;
        }

        .schedule-empty {
            padding: 30px;
            text-align: center;
            background: var(--bg-paper);
            border: 2px dashed #ccc;
            font-family: var(--font-mono);
            color: #666;
        }

        .schedule-empty i { font-size: 40px; margin-bottom: 15px; color: #999; }

        @@media (max-width: 1024px) {
            .sidebar { width: 80px; }
            .sidebar-header h2, .sidebar-header p, .menu-item span { display: none; }
            .menu-item { justify-content: center; padding: 15px; }
            .menu-item i { margin-right: 0; font-size: 20px; }
            .main-content { margin-left: 80px; }
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <div class="sidebar-header">
                <h2>AMS Teacher</h2>
                <p>// @Model.FullName</p>
            </div>
            <nav class="sidebar-menu">
                <a href="@Url.Action("Dashboard", "Teacher")" class="menu-item active">
                    <i class="fas fa-home"></i><span>Dashboard</span>
                </a>
                <a href="@Url.Action("MyCourses", "Teacher")" class="menu-item">
                    <i class="fas fa-book"></i><span>My Courses</span>
                </a>
                <a href="@Url.Action("Attendance", "Teacher")" class="menu-item">
                    <i class="fas fa-calendar-check"></i><span>Mark Attendance</span>
                </a>
                <a href="@Url.Action("Students", "Teacher")" class="menu-item">
                    <i class="fas fa-user-graduate"></i><span>My Students</span>
                </a>

                <a href="@Url.Action("Reports", "Teacher")" class="menu-item">
                    <i class="fas fa-chart-bar"></i><span>Reports</span>
                </a>
                <a href="@Url.Action("ChangePassword", "Account")" class="menu-item">
                    <i class="fas fa-key"></i><span>Password</span>
                </a>
                <a href="@Url.Action("Logout", "Account")" class="menu-item">
                    <i class="fas fa-sign-out-alt"></i><span>Logout</span>
                </a>
            </nav>
        </aside>

        <main class="main-content">
            <div class="top-bar">
                <div class="welcome-text">
                    <h1>Welcome, @Model.FullName!</h1>
                    <p>// Your classes and attendance overview</p>
                </div>
                <div class="user-actions">
                    <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-secondary">
                        <i class="fas fa-key"></i> Password
                    </a>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-primary">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card green">
                    <div class="stat-icon green"><i class="fas fa-book"></i></div>
                    <div class="stat-value">@Model.TotalCourses</div>
                    <div class="stat-label">My Courses</div>
                </div>
                <div class="stat-card orange">
                    <div class="stat-icon orange"><i class="fas fa-user-graduate"></i></div>
                    <div class="stat-value">@Model.TotalStudents</div>
                    <div class="stat-label">Total Students</div>
                </div>
                <div class="stat-card cyan">
                    <div class="stat-icon cyan"><i class="fas fa-calendar-check"></i></div>
                    <div class="stat-value">@ViewBag.WeeklyClasses</div>
                    <div class="stat-label">Classes/Week</div>
                </div>
                <div class="stat-card yellow">
                    <div class="stat-icon yellow"><i class="fas fa-percentage"></i></div>
                    <div class="stat-value">@Model.AttendancePercentage.ToString("F1")%</div>
                    <div class="stat-label">Avg Attendance</div>
                </div>
            </div>

            <div class="content-grid">

                <div class="card">
                    <div class="card-header">
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="quick-actions">
                        <a href="@Url.Action("Attendance", "Teacher")" class="quick-btn">
                            <i class="fas fa-calendar-check"></i>
                            <span>Mark Attendance</span>
                        </a>
                        <a href="@Url.Action("MyCourses", "Teacher")" class="quick-btn">
                            <i class="fas fa-book"></i>
                            <span>View My Courses</span>
                        </a>
                        <a href="@Url.Action("Students", "Teacher")" class="quick-btn">
                            <i class="fas fa-users"></i>
                            <span>View Students</span>
                        </a>
                        <a href="@Url.Action("Reports", "Teacher")" class="quick-btn">
                            <i class="fas fa-chart-line"></i>
                            <span>View Reports</span>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>

