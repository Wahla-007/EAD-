@model AttendanceManagementSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Teacher Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    
    <style>
        /* Dashboard specific layout override */
        .content-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 25px;
        }
        
        .activity-empty {
            padding: 30px;
            text-align: center;
            background: var(--bg-paper);
            border: 2px dashed #ccc;
            font-family: var(--font-mono);
            color: #666;
        }

        .activity-empty i {
            display: block;
            font-size: 40px;
            margin: 0 auto 15px auto;
            color: #999;
        }
        
        .quick-actions {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .quick-btn-full {
             width: 100%;
             justify-content: flex-start;
        }

        @@media (max-width: 768px) {
            .content-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Menu Toggle -->
    <button id="menuToggle" class="neo-menu-toggle"><i class="fas fa-bars"></i></button>
    <div id="sidebarOverlay" class="neo-overlay"></div>

    <div class="neo-container">
        <!-- Sidebar Navigation (Green Theme) -->
        <aside class="neo-sidebar green">
            <div class="neo-sidebar-header">
                <h2>AMS Teacher</h2>
                <p>// @Model.FullName</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="@Url.Action("Dashboard", "Teacher")" class="neo-menu-item active">
                    <i class="fas fa-home"></i> <span>Dashboard</span>
                </a>
                <a href="@Url.Action("MyCourses", "Teacher")" class="neo-menu-item">
                    <i class="fas fa-book"></i> <span>My Courses</span>
                </a>
                <a href="@Url.Action("Attendance", "Teacher")" class="neo-menu-item">
                    <i class="fas fa-calendar-check"></i> <span>Attendance</span>
                </a>
                <a href="@Url.Action("Students", "Teacher")" class="neo-menu-item">
                    <i class="fas fa-user-graduate"></i> <span>My Students</span>
                </a>
                <a href="@Url.Action("Reports", "Teacher")" class="neo-menu-item">
                    <i class="fas fa-chart-bar"></i> <span>Reports</span>
                </a>
                <a href="@Url.Action("ChangePassword", "Account")" class="neo-menu-item">
                    <i class="fas fa-key"></i> <span>Password</span>
                </a>
                <a href="@Url.Action("Logout", "Account")" class="neo-menu-item">
                    <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="neo-main">
            <!-- Top Bar -->
            <div class="neo-topbar">
                <div>
                    <h1>Welcome back, @Model.FullName!</h1>
                    <p>// Manage your classes and students</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="@Url.Action("ChangePassword", "Account")" class="neo-btn">
                        <i class="fas fa-key"></i> Password
                    </a>
                    <a href="@Url.Action("Logout", "Account")" class="neo-btn neo-btn-primary">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>

            <!-- Stats Grid -->
            <div class="neo-stats-grid">
                <div class="neo-stat-card green">
                    <div class="neo-stat-icon green"><i class="fas fa-book"></i></div>
                    <div class="neo-stat-value">@Model.TotalCourses</div>
                    <div class="neo-stat-label">My Courses</div>
                </div>
                <div class="neo-stat-card orange">
                    <div class="neo-stat-icon orange"><i class="fas fa-user-graduate"></i></div>
                    <div class="neo-stat-value">@Model.TotalStudents</div>
                    <div class="neo-stat-label">Total Students</div>
                </div>
                <div class="neo-stat-card cyan">
                    <div class="neo-stat-icon cyan"><i class="fas fa-calendar-check"></i></div>
                    <div class="neo-stat-value">@ViewBag.WeeklyClasses</div>
                    <div class="neo-stat-label">Classes/Week</div>
                </div>
                <div class="neo-stat-card yellow">
                    <div class="neo-stat-icon yellow"><i class="fas fa-percentage"></i></div>
                    <div class="neo-stat-value">@Model.AttendancePercentage.ToString("F1")%</div>
                    <div class="neo-stat-label">Avg Attendance</div>
                </div>
            </div>

            <!-- Content Cards -->
            <div class="content-grid">
                <div class="neo-card">
                    <div class="neo-card-header">
                        <h3>Quick Actions</h3>
                    </div>
                     <div class="quick-actions">
                        <a href="@Url.Action("MyCourses", "Teacher")" class="neo-btn quick-btn-full">
                            <i class="fas fa-clipboard-check"></i>
                            <span>Mark Attendance</span>
                        </a>
                        <a href="@Url.Action("Reports", "Teacher")" class="neo-btn quick-btn-full">
                            <i class="fas fa-chart-line"></i>
                            <span>View Reports</span>
                        </a>
                    </div>
                </div>
                
                <div class="neo-card">
                    <div class="neo-card-header">
                        <h3>Notifications</h3>
                    </div>
                    <div class="activity-empty">
                        <i class="fas fa-bell-slash"></i>
                        <p>No new notifications</p>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Mobile Sidebar Toggle
            $('#menuToggle').click(function() {
                $('.neo-sidebar').addClass('open');
                $('#sidebarOverlay').addClass('show');
            });

            $('#sidebarOverlay').click(function() {
                $('.neo-sidebar').removeClass('open');
                $(this).removeClass('show');
            });
        });
    </script>
</body>
</html>
