@model List<AttendanceManagementSystem.Data.Entities.Timetable>
@{
    Layout = null;
    var daysOfWeek = new Dictionary<int, string> 
    {
        { 1, "Monday" }, 
        { 2, "Tuesday" }, 
        { 3, "Wednesday" }, 
        { 4, "Thursday" }, 
        { 5, "Friday" }
    };
}

<!DOCTYPE html>
<html>
<head>
    <title>My Schedule</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            min-height: 100vh;
            padding: 30px;
        }
        .container { max-width: 1400px; margin: 0 auto; }
        .header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { color: #11998e; font-size: 28px; }
        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #5a6268; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        .schedule-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .day-card {
            border: 2px solid #11998e;
            border-radius: 12px;
            overflow: hidden;
        }
        .day-header {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            padding: 15px;
            font-weight: 600;
            text-align: center;
            font-size: 16px;
        }
        .day-content {
            padding: 15px;
        }
        .class-item {
            padding: 12px;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 10px;
            border-left: 4px solid #11998e;
        }
        .class-item:last-child { margin-bottom: 0; }
        .class-time {
            font-weight: 600;
            color: #11998e;
            font-size: 14px;
            margin-bottom: 5px;
        }
        .class-name {
            font-weight: 600;
            color: #333;
            font-size: 15px;
            margin-bottom: 3px;
        }
        .class-details {
            font-size: 12px;
            color: #666;
        }
        .empty-day {
            padding: 20px;
            text-align: center;
            color: #999;
            font-style: italic;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        .empty-state i { font-size: 64px; margin-bottom: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-calendar-alt"></i> My Schedule</h1>
            <a href="/Teacher/Dashboard" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>

        <div class="card">
            <h2 style="margin-bottom: 20px; color: #333;">Weekly Timetable</h2>
            
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-calendar-times"></i>
                    <p>No classes scheduled yet</p>
                </div>
            }
            else
            {
                <div class="schedule-grid">
                    @foreach (var dayEntry in daysOfWeek)
                    {
                        var dayClasses = Model.Where(t => t.DayOfWeek == dayEntry.Key).OrderBy(t => t.StartTime).ToList();
                        <div class="day-card">
                            <div class="day-header">@dayEntry.Value</div>
                            <div class="day-content">
                                @if (dayClasses.Any())
                                {
                                    foreach (var classItem in dayClasses)
                                    {
                                        <div class="class-item">
                                            <div class="class-time">
                                                <i class="fas fa-clock"></i>
                                                @classItem.StartTime.ToString(@"hh\:mm") - @classItem.EndTime.ToString(@"hh\:mm")
                                            </div>
                                            <div class="class-name">
                                                @classItem.Assignment?.Course?.CourseCode - @classItem.Assignment?.Course?.CourseName
                                            </div>
                                            <div class="class-details">
                                                <i class="fas fa-door-open"></i> Room @classItem.RoomNumber &nbsp;|&nbsp;
                                                <i class="fas fa-users"></i> @classItem.Assignment?.Section?.SectionName
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="empty-day">No classes</div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</body>
</html>
