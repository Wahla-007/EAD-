@{
    Layout = null;
    var courses = ViewBag.Courses as List<AttendanceManagementSystem.Data.Entities.CourseAssignment>;
    var students = ViewBag.Students as List<AttendanceManagementSystem.Data.Entities.Student>;
    var selectedAssignmentId = ViewBag.SelectedAssignmentId as int?;
}

<!DOCTYPE html>
<html>
<head>
    <title>Mark Attendance</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
            min-height: 100vh;
        }
        .container { max-width: 1400px; margin: 0 auto; padding: 30px; }
        .header {
            background: white;
            padding: 25px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .header h1 { color: #00b894; font-size: 28px; }
        .btn {
            padding: 12px 25px;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
            font-size: 14px;
        }
        .btn-primary {
            background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
            color: white;
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0, 184, 148, 0.4); }
        .btn-secondary { background: #6c757d; color: white; }
        .btn-secondary:hover { background: #5a6268; }
        .btn-info { background: #17a2b8; color: white; }
        .btn-info:hover { background: #138496; }
        .card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            margin-bottom: 25px;
        }
        .form-group { margin-bottom: 20px; }
        label { font-weight: 600; color: #333; display: block; margin-bottom: 8px; }
        select, input[type="date"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th {
            background: linear-gradient(135deg, #00b894 0%, #00cec9 100%);
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }
        td {
            padding: 15px;
            border-bottom: 1px solid #eee;
        }
        .attendance-btns {
            display: flex;
            gap: 10px;
        }
        .att-btn {
            flex: 1;
            padding: 8px 15px;
            border-radius: 6px;
            border: 2px solid;
            background: white;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 600;
            text-align: center;
        }
        .att-btn.present {
            border-color: #28a745;
            color: #28a745;
        }
        .att-btn.present.active {
            background: #28a745;
            color: white;
        }
        .att-btn.absent {
            border-color: #dc3545;
            color: #dc3545;
        }
        .att-btn.absent.active {
            background: #dc3545;
            color: white;
        }
        .att-btn.leave {
            border-color: #ffc107;
            color: #ffc107;
        }
        .att-btn.leave.active {
            background: #ffc107;
            color: white;
        }
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .alert-success {
            background: #d4edda;
            border: 1px solid #c3e6cb;
            color: #155724;
        }
        .alert-danger {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #999;
        }
        .empty-state i { font-size: 64px; margin-bottom: 20px; }
        input[type="radio"] { display: none; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1><i class="fas fa-clipboard-check"></i> Mark Attendance</h1>
            <div style="display: flex; gap: 15px;">
                <a href="/Teacher/ViewAttendance" class="btn btn-info">
                    <i class="fas fa-eye"></i> View Attendance
                </a>
                <a href="/Teacher/Dashboard" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            </div>
        }

        <div class="card">
            <h2 style="margin-bottom: 20px; color: #333;">Select Course & Date</h2>
            <form method="get" action="/Teacher/MarkAttendance">
                <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 20px; align-items: end;">
                    <div class="form-group" style="margin-bottom: 0;">
                        <label>Select Course</label>
                        <select name="assignmentId" required onchange="this.form.submit()">
                            <option value="">-- Choose Course --</option>
                            @if (courses != null)
                            {
                                foreach (var course in courses)
                                {
                                    var isSelected = selectedAssignmentId == course.AssignmentId ? "selected" : "";
                                    <option value="@course.AssignmentId" selected="@isSelected">
                                        @course.Course?.CourseCode - @course.Course?.CourseName (@course.Section?.SectionName)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label>Select Date</label>
                        <input type="date" id="attendanceDate" name="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                    </div>
                    <button type="button" onclick="loadStudents()" class="btn btn-primary" style="height: 42px;">
                        <i class="fas fa-sync"></i> Load
                    </button>
                </div>
            </form>
        </div>

        @if (students != null && students.Any())
        {
            <div class="card">
                <h2 style="margin-bottom: 20px; color: #333;">Mark Attendance for Students</h2>
                <form id="attendanceForm" method="post" action="/Teacher/SubmitAttendance">
                    <input type="hidden" name="assignmentId" value="@selectedAssignmentId" />
                    <input type="hidden" name="attendanceDate" id="hiddenDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    
                    <table>
                        <thead>
                            <tr>
                                <th>Roll No</th>
                                <th>Student Name</th>
                                <th>Email</th>
                                <th style="text-align: center;">Attendance Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < students.Count; i++)
                            {
                                var student = students[i];
                                <tr>
                                    <td><strong>@student.RollNumber</strong></td>
                                    <td>@student.User?.FullName</td>
                                    <td>@student.User?.Email</td>
                                    <td>
                                        <input type="hidden" name="studentIds[@i]" value="@student.StudentId" />
                                        <div class="attendance-btns">
                                            <label class="att-btn present" data-row="@i">
                                                <input type="radio" name="statuses[@i]" value="Present" required />
                                                <i class="fas fa-check"></i> Present
                                            </label>
                                            <label class="att-btn absent" data-row="@i">
                                                <input type="radio" name="statuses[@i]" value="Absent" />
                                                <i class="fas fa-times"></i> Absent
                                            </label>
                                            <label class="att-btn leave" data-row="@i">
                                                <input type="radio" name="statuses[@i]" value="Leave" />
                                                <i class="fas fa-plane"></i> Leave
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    <div style="display: flex; justify-content: flex-end; gap: 15px; margin-top: 30px;">
                        <button type="button" onclick="markAllPresent()" class="btn btn-secondary">
                            <i class="fas fa-check-double"></i> Mark All Present
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Submit Attendance
                        </button>
                    </div>
                </form>
            </div>
        }
        else if (selectedAssignmentId.HasValue)
        {
            <div class="card">
                <div class="empty-state">
                    <i class="fas fa-user-graduate"></i>
                    <p>No students registered for this course</p>
                </div>
            </div>
        }
    </div>

    <script>
        // Sync date fields
        document.getElementById('attendanceDate').addEventListener('change', function() {
            document.getElementById('hiddenDate').value = this.value;
        });

        // Handle attendance button clicks
        document.querySelectorAll('.att-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.getAttribute('data-row');
                document.querySelectorAll(`.att-btn[data-row="${row}"]`).forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        function markAllPresent() {
            document.querySelectorAll('input[type="radio"][value="Present"]').forEach(radio => {
                radio.checked = true;
                const row = radio.name.match(/\[(\d+)\]/)[1];
                document.querySelectorAll(`.att-btn[data-row="${row}"]`).forEach(b => b.classList.remove('active'));
                radio.closest('td').querySelector('.att-btn.present').classList.add('active');
            });
        }

        function loadStudents() {
            const form = document.querySelector('form[action="/Teacher/MarkAttendance"]');
            form.submit();
        }
    </script>
</body>
</html>
