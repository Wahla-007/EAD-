@{
    Layout = null;
    var courses = ViewBag.Courses as List<AttendanceManagementSystem.Data.Entities.CourseAssignment>;
    var students = ViewBag.Students as List<AttendanceManagementSystem.Data.Entities.Student>;
    var selectedAssignmentId = ViewBag.SelectedAssignmentId as int?;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mark Attendance - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #22c55e; }
        .neo-sidebar-header { background: #000; color: #22c55e; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #22c55e; }
        
        .attendance-btns { display: flex; gap: 10px; }
        .att-btn {
            flex: 1;
            padding: 10px 15px;
            border: 3px solid #000;
            background: var(--bg-cream);
            cursor: pointer;
            transition: all 0.1s ease;
            font-weight: 700;
            text-align: center;
            font-size: 12px;
            box-shadow: 3px 3px 0px #000;
        }
        .att-btn:hover { transform: translate(-2px, -2px); box-shadow: 5px 5px 0px #000; }
        .att-btn.present { border-color: #22c55e; color: #22c55e; }
        .att-btn.present.active { background: #22c55e; color: white; }
        .att-btn.absent { border-color: #ef4444; color: #ef4444; }
        .att-btn.absent.active { background: #ef4444; color: white; }
        .att-btn.leave { border-color: #f97316; color: #f97316; }
        .att-btn.leave.active { background: #f97316; color: white; }
        input[type="radio"] { display: none; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Teacher</h2>
                <p>// Mark Attendance</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Teacher/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Teacher/MyCourses" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Teacher/Attendance" class="neo-menu-item active"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Teacher/Students" class="neo-menu-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>
                <a href="/Teacher/Schedule" class="neo-menu-item"><i class="fas fa-clock"></i><span>Schedule</span></a>
                <a href="/Teacher/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-clipboard-check"></i> Mark Attendance</h1>
                    <p>// Record student attendance for your courses</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Teacher/ViewAttendance" class="neo-btn neo-btn-info"><i class="fas fa-eye"></i> View Attendance</a>
                    <a href="/Teacher/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="neo-alert neo-alert-success"><i class="fas fa-check-circle"></i> @TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="neo-alert neo-alert-danger"><i class="fas fa-exclamation-circle"></i> @TempData["Error"]</div>
            }

            <div class="neo-card">
                <div class="neo-card-header"><h3>Select Course & Date</h3></div>
                <form method="get" action="/Teacher/MarkAttendance">
                    <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 20px; align-items: end;">
                        <div class="neo-form-group" style="margin-bottom: 0;">
                            <label class="neo-label"><i class="fas fa-book"></i> Select Course</label>
                            <select name="assignmentId" class="neo-select" required onchange="this.form.submit()">
                                <option value="">-- Choose Course --</option>
                                @if (courses != null)
                                {
                                    foreach (var course in courses)
                                    {
                                        var isSelected = selectedAssignmentId == course.AssignmentId ? "selected" : "";
                                        <option value="@course.AssignmentId" selected="@isSelected">
                                            @course.Course?.CourseCode - @course.Course?.CourseName (@course.Section?.SectionName)
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="neo-form-group" style="margin-bottom: 0;">
                            <label class="neo-label"><i class="fas fa-calendar"></i> Select Date</label>
                            <input type="date" id="attendanceDate" name="date" class="neo-input" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                        <button type="button" onclick="loadStudents()" class="neo-btn neo-btn-primary" style="height: 52px;">
                            <i class="fas fa-sync"></i> Load
                        </button>
                    </div>
                </form>
            </div>

            @if (students != null && students.Any())
            {
                <div class="neo-card">
                    <div class="neo-card-header">
                        <h3>Mark Attendance for Students</h3>
                        <span class="neo-badge neo-badge-info">@students.Count Students</span>
                    </div>
                    <form id="attendanceForm" method="post" action="/Teacher/SubmitAttendance">
                        <input type="hidden" name="assignmentId" value="@selectedAssignmentId" />
                        <input type="hidden" name="attendanceDate" id="hiddenDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        
                        <div class="neo-table-wrapper">
                            <table class="neo-table">
                                <thead>
                                    <tr>
                                        <th>Roll No</th>
                                        <th>Student Name</th>
                                        <th>Email</th>
                                        <th style="text-align: center;">Attendance Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < students.Count; i++)
                                    {
                                        var student = students[i];
                                        <tr>
                                            <td><strong>@student.RollNumber</strong></td>
                                            <td>@student.User?.FullName</td>
                                            <td>@student.User?.Email</td>
                                            <td>
                                                <input type="hidden" name="studentIds[@i]" value="@student.StudentId" />
                                                <div class="attendance-btns">
                                                    <label class="att-btn present" data-row="@i">
                                                        <input type="radio" name="statuses[@i]" value="Present" required />
                                                        <i class="fas fa-check"></i> Present
                                                    </label>
                                                    <label class="att-btn absent" data-row="@i">
                                                        <input type="radio" name="statuses[@i]" value="Absent" />
                                                        <i class="fas fa-times"></i> Absent
                                                    </label>
                                                    <label class="att-btn leave" data-row="@i">
                                                        <input type="radio" name="statuses[@i]" value="Leave" />
                                                        <i class="fas fa-plane"></i> Leave
                                                    </label>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div style="display: flex; justify-content: flex-end; gap: 15px; margin-top: 30px;">
                            <button type="button" onclick="markAllPresent()" class="neo-btn">
                                <i class="fas fa-check-double"></i> Mark All Present
                            </button>
                            <button type="submit" class="neo-btn neo-btn-success">
                                <i class="fas fa-save"></i> Submit Attendance
                            </button>
                        </div>
                    </form>
                </div>
            }
            else if (selectedAssignmentId.HasValue)
            {
                <div class="neo-card">
                    <div class="neo-empty">
                        <i class="fas fa-user-graduate"></i>
                        <p>No students registered for this course</p>
                    </div>
                </div>
            }
        </main>
    </div>

    <script>
        document.getElementById('attendanceDate')?.addEventListener('change', function() {
            document.getElementById('hiddenDate').value = this.value;
        });
        document.querySelectorAll('.att-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const row = this.getAttribute('data-row');
                document.querySelectorAll(`.att-btn[data-row="${row}"]`).forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });
        function markAllPresent() {
            document.querySelectorAll('input[type="radio"][value="Present"]').forEach(radio => {
                radio.checked = true;
                const row = radio.name.match(/\[(\d+)\]/)[1];
                document.querySelectorAll(`.att-btn[data-row="${row}"]`).forEach(b => b.classList.remove('active'));
                radio.closest('td').querySelector('.att-btn.present').classList.add('active');
            });
        }
        function loadStudents() {
            const form = document.querySelector('form[action="/Teacher/MarkAttendance"]');
            form.submit();
        }
    </script>
</body>
</html>
