@{
    Layout = null;
    var courses = ViewBag.Courses as List<AttendanceManagementSystem.Data.Entities.CourseAssignment>;
    var attendanceRecords = ViewBag.AttendanceRecords as List<AttendanceManagementSystem.Data.Entities.Attendance>;
    var selectedAssignmentId = ViewBag.SelectedAssignmentId as int?;
    var selectedDate = ViewBag.SelectedDate as DateTime?;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Attendance - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/neo-brutalist.css" />
    <style>
        .neo-sidebar { background: #22c55e; }
        .neo-sidebar-header { background: #000; color: #22c55e; }
        .neo-sidebar-header p { color: white; }
        .neo-menu-item { color: #000; border-color: rgba(0,0,0,0.1); }
        .neo-menu-item:hover, .neo-menu-item.active { background: #000; color: #22c55e; }
    </style>
</head>
<body>
    <div class="neo-container">
        <aside class="neo-sidebar">
            <div class="neo-sidebar-header">
                <h2>AMS Teacher</h2>
                <p>// View Attendance</p>
            </div>
            <nav class="neo-sidebar-menu">
                <a href="/Teacher/Dashboard" class="neo-menu-item"><i class="fas fa-home"></i><span>Dashboard</span></a>
                <a href="/Teacher/MyCourses" class="neo-menu-item"><i class="fas fa-book"></i><span>My Courses</span></a>
                <a href="/Teacher/Attendance" class="neo-menu-item active"><i class="fas fa-calendar-check"></i><span>Attendance</span></a>
                <a href="/Teacher/Students" class="neo-menu-item"><i class="fas fa-user-graduate"></i><span>Students</span></a>

                <a href="/Teacher/Reports" class="neo-menu-item"><i class="fas fa-chart-bar"></i><span>Reports</span></a>
                <a href="/Account/Logout" class="neo-menu-item"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a>
            </nav>
        </aside>

        <main class="neo-main">
            <div class="neo-topbar">
                <div>
                    <h1><i class="fas fa-chart-line"></i> View Attendance</h1>
                    <p>// Review attendance records</p>
                </div>
                <div class="neo-topbar-actions">
                    <a href="/Teacher/MarkAttendance" class="neo-btn neo-btn-success"><i class="fas fa-clipboard-check"></i> Mark Attendance</a>
                    <a href="/Teacher/Dashboard" class="neo-btn"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>

            <div class="neo-card">
                <div class="neo-card-header"><h3>Select Course & Date</h3></div>
                <form method="get" action="/Teacher/ViewAttendance">
                    <div style="display: grid; grid-template-columns: 1fr 1fr auto; gap: 20px; align-items: end;">
                        <div class="neo-form-group" style="margin-bottom: 0;">
                            <label class="neo-label"><i class="fas fa-book"></i> Select Course</label>
                            <select name="assignmentId" class="neo-select" required>
                                <option value="">-- Choose Course --</option>
                                @if (courses != null)
                                {
                                    foreach (var course in courses)
                                    {
                                        var isSelected = selectedAssignmentId == course.AssignmentId ? "selected" : "";
                                        <option value="@course.AssignmentId" selected="@isSelected">
                                            @course.Course?.CourseCode - @course.Course?.CourseName (@course.Section?.SectionName)
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="neo-form-group" style="margin-bottom: 0;">
                            <label class="neo-label"><i class="fas fa-calendar"></i> Select Date</label>
                            <input type="date" name="date" class="neo-input" value="@(selectedDate?.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))" required />
                        </div>
                        <button type="submit" class="neo-btn neo-btn-primary" style="height: 52px;">
                            <i class="fas fa-search"></i> View
                        </button>
                    </div>
                </form>
            </div>

            @if (attendanceRecords != null)
            {
                var totalStudents = attendanceRecords.Count;
                var presentCount = attendanceRecords.Count(a => a.Status == "Present");
                var absentCount = attendanceRecords.Count(a => a.Status == "Absent");
                var leaveCount = attendanceRecords.Count(a => a.Status == "Leave");
                var percentage = totalStudents > 0 ? (presentCount * 100.0 / totalStudents) : 0;

                <div class="neo-stats-grid">
                    <div class="neo-stat-card cyan">
                        <div class="neo-stat-icon cyan"><i class="fas fa-users"></i></div>
                        <div class="neo-stat-value">@totalStudents</div>
                        <div class="neo-stat-label">Total Students</div>
                    </div>
                    <div class="neo-stat-card green">
                        <div class="neo-stat-icon green"><i class="fas fa-check-circle"></i></div>
                        <div class="neo-stat-value">@presentCount</div>
                        <div class="neo-stat-label">Present</div>
                    </div>
                    <div class="neo-stat-card orange">
                        <div class="neo-stat-icon orange"><i class="fas fa-times-circle"></i></div>
                        <div class="neo-stat-value">@absentCount</div>
                        <div class="neo-stat-label">Absent</div>
                    </div>
                    <div class="neo-stat-card purple">
                        <div class="neo-stat-icon purple"><i class="fas fa-percentage"></i></div>
                        <div class="neo-stat-value">@percentage.ToString("F1")%</div>
                        <div class="neo-stat-label">Attendance Rate</div>
                    </div>
                </div>

                <div class="neo-card">
                    <div class="neo-card-header">
                        <h3>Attendance Details - @selectedDate?.ToString("MMMM dd, yyyy")</h3>
                    </div>

                    @if (!attendanceRecords.Any())
                    {
                        <div class="neo-empty">
                            <i class="fas fa-clipboard-list"></i>
                            <p>No attendance records for this date</p>
                        </div>
                    }
                    else
                    {
                        <div class="neo-table-wrapper">
                            <table class="neo-table">
                                <thead>
                                    <tr>
                                        <th>Roll No</th>
                                        <th>Student Name</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Marked Time</th>
                                        <th>Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var record in attendanceRecords)
                                    {
                                        <tr>
                                            <td><strong>@record.Registration?.Student?.RollNumber</strong></td>
                                            <td>@record.Registration?.Student?.User?.FullName</td>
                                            <td>@record.Registration?.Student?.User?.Email</td>
                                            <td>
                                                @if (record.Status == "Present")
                                                {
                                                    <span class="neo-badge neo-badge-success"><i class="fas fa-check"></i> Present</span>
                                                }
                                                else if (record.Status == "Absent")
                                                {
                                                    <span class="neo-badge neo-badge-danger"><i class="fas fa-times"></i> Absent</span>
                                                }
                                                else if (record.Status == "Leave")
                                                {
                                                    <span class="neo-badge neo-badge-warning"><i class="fas fa-plane"></i> Leave</span>
                                                }
                                            </td>
                                            <td style="font-family: var(--font-mono);">@record.MarkedDate.ToString("hh:mm tt")</td>
                                            <td>@(record.Remarks ?? "-")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            }
        </main>
    </div>
</body>
</html>

