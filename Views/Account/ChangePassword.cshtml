@model AttendanceManagementSystem.Models.DTOs.ChangePasswordRequestDto
@{
    ViewData["Title"] = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>&#x1F393;</text></svg>">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attendance Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --bg-paper: #f5f5f0;
            --bg-cream: #fffef9;
            --accent-purple: #9333ea;
            --accent-green: #22c55e;
            --accent-yellow: #fde047;
            --text-black: #000000;
            --border-black: #000000;
            --shadow-black: #000000;
            --font-display: 'Space Grotesk', sans-serif;
            --font-mono: 'JetBrains Mono', monospace;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: var(--font-display);
            background-color: var(--bg-paper);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            background-image: 
                linear-gradient(rgba(0,0,0,0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0,0,0,0.03) 1px, transparent 1px);
            background-size: 20px 20px;
        }
        .container {
            background: var(--bg-cream);
            padding: 50px;
            border: 3px solid var(--border-black);
            box-shadow: 8px 8px 0px var(--shadow-black);
            max-width: 500px;
            width: 100%;
        }
        .header { text-align: center; margin-bottom: 40px; }
        .header-icon {
            width: 80px;
            height: 80px;
            background: var(--accent-purple);
            border: 3px solid var(--border-black);
            box-shadow: 4px 4px 0px var(--shadow-black);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            font-size: 36px;
            color: white;
        }
        .header h1 {
            font-size: 32px;
            font-weight: 700;
            color: var(--text-black);
            margin-bottom: 10px;
        }
        .header p {
            font-family: var(--font-mono);
            color: #555;
            font-size: 14px;
        }
        .alert {
            padding: 15px 20px;
            border: 3px solid var(--border-black);
            margin-bottom: 25px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .alert-success { background: #dcfce7; border-left: 8px solid var(--accent-green); }
        .alert-danger { background: #fee2e2; border-left: 8px solid #ef4444; }
        .form-group { margin-bottom: 25px; }
        .form-group label {
            display: block;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
            color: var(--text-black);
        }
        .input-group { position: relative; }
        .input-group input {
            width: 100%;
            padding: 14px 50px 14px 16px;
            font-size: 16px;
            font-family: var(--font-mono);
            background: var(--bg-cream);
            border: 3px solid var(--border-black);
            box-shadow: 4px 4px 0px var(--shadow-black);
            transition: all 0.15s ease;
        }
        .input-group input:focus {
            outline: none;
            background: var(--accent-yellow);
            box-shadow: 6px 6px 0px var(--shadow-black);
            transform: translate(-2px, -2px);
        }
        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 18px;
            cursor: pointer;
            color: var(--text-black);
        }
        .toggle-password:hover { color: var(--accent-purple); }
        .password-requirements {
            font-size: 12px;
            font-family: var(--font-mono);
            color: #666;
            margin-top: 8px;
        }
        .btn {
            width: 100%;
            padding: 16px;
            font-family: var(--font-display);
            font-weight: 700;
            font-size: 16px;
            text-transform: uppercase;
            letter-spacing: 2px;
            border: 3px solid var(--border-black);
            box-shadow: 5px 5px 0px var(--shadow-black);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: all 0.1s ease;
            margin-bottom: 15px;
            text-decoration: none;
        }
        .btn:hover { transform: translate(-2px, -2px); box-shadow: 7px 7px 0px var(--shadow-black); }
        .btn:active { transform: translate(4px, 4px); box-shadow: 0px 0px 0px var(--shadow-black); }
        .btn-primary { background: var(--accent-purple); color: white; }
        .btn-secondary { background: var(--bg-paper); color: var(--text-black); }
        .text-danger {
            color: #ef4444;
            font-size: 12px;
            font-weight: 600;
            margin-top: 5px;
            display: block;
        }
        .validation-summary-errors {
            background: #fee2e2;
            padding: 15px 20px;
            border: 3px solid var(--border-black);
            border-left: 8px solid #ef4444;
            margin-bottom: 25px;
        }
        .validation-summary-errors ul { margin: 10px 0 0 20px; }
        .validation-summary-errors li { margin-bottom: 5px; font-weight: 600; }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header-icon"><i class="fas fa-key"></i></div>
            <h1>Change Password</h1>
            <p>// Create a new secure password</p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="validation-summary-errors">
                <i class="fas fa-exclamation-circle"></i>
                <strong>Please correct the following errors:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="ChangePassword" method="post">
            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId" />

            <div class="form-group">
                <label asp-for="OldPassword"><i class="fas fa-lock"></i> Current Password</label>
                <div class="input-group">
                    <input asp-for="OldPassword" type="password" id="oldPassword" placeholder="Enter your current password" required />
                    <button type="button" class="toggle-password" onclick="togglePassword('oldPassword', this)">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"><i class="fas fa-key"></i> New Password</label>
                <div class="input-group">
                    <input asp-for="NewPassword" type="password" id="newPassword" placeholder="Enter your new password" required />
                    <button type="button" class="toggle-password" onclick="togglePassword('newPassword', this)">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <p class="password-requirements"><i class="fas fa-info-circle"></i> Minimum 6 characters</p>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"><i class="fas fa-check-double"></i> Confirm Password</label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" id="confirmPassword" placeholder="Re-enter your new password" required />
                    <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword', this)">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-check"></i> Change Password
            </button>

            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
        </form>
    </div>

    <script>
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }
    </script>
</body>
</html>

