@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Attendance Management System</title>
    
    <!-- Neo-Brutalist Typography -->
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <style>
        /* ============================================
           NEO-BRUTALIST DESIGN SYSTEM
           HCI Principles: Affordance, Feedback, Clarity
           ============================================ */
        
        :root {
            /* Color Palette - High Contrast */
            --bg-paper: #f5f5f0;
            --bg-cream: #fffef9;
            --accent-purple: #9333ea;
            --accent-green: #22c55e;
            --accent-orange: #f97316;
            --accent-yellow: #fde047;
            --text-black: #000000;
            --border-black: #000000;
            --shadow-black: #000000;
            
            /* Typography */
            --font-display: 'Space Grotesk', sans-serif;
            --font-mono: 'JetBrains Mono', monospace;
            
            /* Spacing */
            --border-thick: 3px;
            --shadow-offset: 6px;
            --radius-brutal: 0px;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: var(--font-display);
            background-color: var(--bg-paper);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            /* Subtle grid pattern for brutalist feel */
            background-image: 
                linear-gradient(rgba(0,0,0,0.03) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0,0,0,0.03) 1px, transparent 1px);
            background-size: 20px 20px;
        }

        /* ============================================
           MAIN CONTAINER - Floating Card
           ============================================ */
        .login-container {
            display: flex;
            max-width: 1000px;
            width: 100%;
            background: var(--bg-cream);
            border: var(--border-thick) solid var(--border-black);
            box-shadow: var(--shadow-offset) var(--shadow-offset) 0px var(--shadow-black);
        }

        /* ============================================
           LEFT PANEL - Branding
           ============================================ */
        .brand-panel {
            flex: 1;
            background: var(--accent-purple);
            padding: 60px 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            border-right: var(--border-thick) solid var(--border-black);
            position: relative;
            overflow: hidden;
        }

        /* Decorative geometric shapes */
        .brand-panel::before {
            content: '';
            position: absolute;
            top: -50px;
            right: -50px;
            width: 200px;
            height: 200px;
            background: var(--accent-yellow);
            border: var(--border-thick) solid var(--border-black);
            transform: rotate(15deg);
        }

        .brand-panel::after {
            content: '';
            position: absolute;
            bottom: -30px;
            left: -30px;
            width: 150px;
            height: 150px;
            background: var(--accent-green);
            border: var(--border-thick) solid var(--border-black);
            border-radius: 50%;
        }

        .brand-content {
            position: relative;
            z-index: 1;
        }

        .brand-icon {
            font-size: 80px;
            color: var(--bg-cream);
            margin-bottom: 30px;
            text-shadow: 4px 4px 0px var(--border-black);
        }

        .brand-title {
            font-size: 42px;
            font-weight: 700;
            color: var(--bg-cream);
            line-height: 1.1;
            margin-bottom: 20px;
            text-shadow: 3px 3px 0px var(--border-black);
        }

        .brand-subtitle {
            font-size: 16px;
            color: var(--bg-cream);
            opacity: 0.9;
            font-family: var(--font-mono);
            margin-bottom: 40px;
        }

        /* Feature List */
        .feature-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 15px;
            background: var(--bg-cream);
            padding: 15px 20px;
            border: var(--border-thick) solid var(--border-black);
            box-shadow: 4px 4px 0px var(--border-black);
            font-weight: 600;
            font-size: 14px;
            transition: all 0.15s ease;
        }

        .feature-item:hover {
            transform: translate(-2px, -2px);
            box-shadow: 6px 6px 0px var(--border-black);
        }

        .feature-item i {
            color: var(--accent-green);
            font-size: 20px;
        }

        /* ============================================
           RIGHT PANEL - Login Form
           ============================================ */
        .form-panel {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-header {
            margin-bottom: 40px;
        }

        .form-header h2 {
            font-size: 36px;
            font-weight: 700;
            color: var(--text-black);
            margin-bottom: 10px;
        }

        .form-header p {
            font-size: 16px;
            color: #555;
            font-family: var(--font-mono);
        }

        /* ============================================
           FORM ELEMENTS - HCI: Clear Affordance
           ============================================ */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
            color: var(--text-black);
        }

        .form-label i {
            margin-right: 8px;
            color: var(--accent-purple);
        }

        .form-control {
            width: 100%;
            padding: 16px 18px;
            font-size: 16px;
            font-family: var(--font-mono);
            background: var(--bg-cream);
            border: var(--border-thick) solid var(--border-black);
            box-shadow: 4px 4px 0px var(--border-black);
            transition: all 0.15s ease;
        }

        /* HCI: Focus state feedback */
        .form-control:focus {
            outline: none;
            background: var(--accent-yellow);
            box-shadow: 6px 6px 0px var(--border-black);
            transform: translate(-2px, -2px);
        }

        .form-control::placeholder {
            color: #888;
            font-style: italic;
        }

        /* Password wrapper */
        .password-wrapper {
            position: relative;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            font-size: 20px;
            cursor: pointer;
            color: var(--text-black);
            transition: color 0.15s ease;
        }

        .password-toggle:hover {
            color: var(--accent-purple);
        }

        /* ============================================
           CHECKBOX - Custom Brutalist Style
           ============================================ */
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            font-weight: 600;
            font-size: 14px;
        }

        .checkbox-wrapper input[type="checkbox"] {
            appearance: none;
            width: 24px;
            height: 24px;
            border: var(--border-thick) solid var(--border-black);
            background: var(--bg-cream);
            cursor: pointer;
            position: relative;
            transition: all 0.15s ease;
        }

        .checkbox-wrapper input[type="checkbox"]:checked {
            background: var(--accent-green);
        }

        .checkbox-wrapper input[type="checkbox"]:checked::after {
            content: '✓';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 16px;
            font-weight: 700;
            color: var(--text-black);
        }

        /* ============================================
           BUTTON - HCI: Tactile Feedback
           ============================================ */
        .btn-login {
            width: 100%;
            padding: 18px 30px;
            font-size: 18px;
            font-weight: 700;
            font-family: var(--font-display);
            text-transform: uppercase;
            letter-spacing: 2px;
            background: var(--accent-purple);
            color: white;
            border: var(--border-thick) solid var(--border-black);
            box-shadow: var(--shadow-offset) var(--shadow-offset) 0px var(--shadow-black);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: all 0.1s ease;
        }

        /* HCI: Hover state - button lifts */
        .btn-login:hover {
            transform: translate(-2px, -2px);
            box-shadow: 8px 8px 0px var(--shadow-black);
            background: #7c22ce;
        }

        /* HCI: Active state - button presses down */
        .btn-login:active {
            transform: translate(4px, 4px);
            box-shadow: 0px 0px 0px var(--shadow-black);
        }

        /* ============================================
           ERROR STATES
           ============================================ */
        .error-box {
            background: #fef2f2;
            border: var(--border-thick) solid #dc2626;
            padding: 15px 20px;
            margin-bottom: 25px;
            font-weight: 600;
            color: #dc2626;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .error-box i {
            font-size: 20px;
        }

        .error-text {
            color: #dc2626;
            font-size: 13px;
            font-weight: 600;
            margin-top: 8px;
            display: block;
        }

        /* ============================================
           FOOTER
           ============================================ */
        .form-footer {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px dashed #ccc;
            text-align: center;
            font-family: var(--font-mono);
            font-size: 12px;
            color: #666;
        }

        /* ============================================
           RESPONSIVE DESIGN
           ============================================ */
        @@media (max-width: 900px) {
            .login-container {
                flex-direction: column;
            }

            .brand-panel {
                border-right: none;
                border-bottom: var(--border-thick) solid var(--border-black);
                padding: 40px 30px;
            }

            .brand-title {
                font-size: 32px;
            }

            .brand-icon {
                font-size: 60px;
            }

            .feature-list {
                display: none;
            }

            .form-panel {
                padding: 40px 30px;
            }
        }

        @@media (max-width: 500px) {
            body {
                padding: 10px;
            }

            .login-container {
                box-shadow: 4px 4px 0px var(--shadow-black);
            }

            .form-header h2 {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Brand Panel -->
        <div class="brand-panel">
            <div class="brand-content">
                <i class="fas fa-graduation-cap brand-icon"></i>
                <h1 class="brand-title">Attendance Management System</h1>
                <p class="brand-subtitle">// Track. Analyze. Improve.</p>
                
                <div class="feature-list">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Real-time Tracking</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Smart Reports</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>100% Secure</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Form Panel -->
        <div class="form-panel">
            <div class="form-header">
                <h2>Welcome Back!</h2>
                <p>// Enter credentials to continue</p>
            </div>

            <form method="post">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="error-box">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span>@Model.ErrorMessage</span>
                    </div>
                }

                <div class="form-group">
                    <label asp-for="Username" class="form-label">
                        <i class="fas fa-user"></i> Username
                    </label>
                    <input asp-for="Username" class="form-control" placeholder="Enter your username" required />
                    <span asp-validation-for="Username" class="error-text"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> Password
                    </label>
                    <div class="password-wrapper">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                        <button type="button" class="password-toggle" onclick="togglePassword()">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="error-text"></span>
                </div>

                <div class="form-options">
                    <label class="checkbox-wrapper">
                        <input type="checkbox" asp-for="RememberMe" />
                        <span>Remember me</span>
                    </label>
                </div>

                <button type="submit" class="btn-login">
                    <span>Login</span>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </form>

            <div class="form-footer">
                <p>© 2025 Attendance Management System</p>
                <p>Designed with Neo-Brutalist principles</p>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.querySelector('input[name="Password"]');
            const toggleIcon = document.getElementById('toggleIcon');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Check if login was successful and redirect
        @if (TempData["LoginSuccess"] != null && TempData["RedirectUrl"] != null)
        {
            <text>
            window.location.href = '@TempData["RedirectUrl"]';
            </text>
        }
    </script>
</body>
</html>